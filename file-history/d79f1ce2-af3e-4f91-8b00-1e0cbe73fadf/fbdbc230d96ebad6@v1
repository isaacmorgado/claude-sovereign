#!/bin/bash

echo "üîß COMPLETE FIX - Clean Install KOMPLETE-KONTROL"
echo "================================================="
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if VSCode is running
if pgrep -x "Code" > /dev/null; then
    echo -e "${RED}‚ùå ERROR: Visual Studio Code is currently running!${NC}"
    echo ""
    echo "Please QUIT VSCode completely before running this script:"
    echo "  1. Switch to VSCode"
    echo "  2. Press Cmd+Q (or VSCode ‚Üí Quit)"
    echo "  3. Run this script again"
    echo ""
    exit 1
fi

echo -e "${GREEN}‚úÖ VSCode is not running - proceeding...${NC}"
echo ""

# Step 1: Remove ALL traces of old extensions
echo "üóëÔ∏è  Step 1: Removing all old extension files..."
echo ""

# Remove old extension directories
for ext_dir in \
    "$HOME/.vscode/extensions/rooveterinaryinc.roo-cline-3.38.1" \
    "$HOME/.vscode/extensions/kompletekontrol.komplete-kontrol-3.38.1" \
    "$HOME/.vscode/extensions/KompleteKontrol.komplete-kontrol-3.38.1" \
    "$HOME/.vscode/extensions/rooveterinaryinc.roo-cline"* \
    "$HOME/.vscode/extensions/kompletekontrol.komplete-kontrol"* \
    "$HOME/.vscode/extensions/saoudrizwan.claude-dev"*
do
    if [ -d "$ext_dir" ]; then
        echo "  Removing: $(basename "$ext_dir")"
        rm -rf "$ext_dir"
        echo "    ‚úÖ Removed"
    fi
done

echo ""
echo -e "${GREEN}‚úÖ Extension directories cleaned${NC}"
echo ""

# Step 2: Clear ALL VSCode caches
echo "üßπ Step 2: Clearing VSCode caches..."
echo ""

# Extension caches
if [ -d "$HOME/Library/Application Support/Code/CachedExtensionVSIXs" ]; then
    echo "  Clearing CachedExtensionVSIXs..."
    rm -rf "$HOME/Library/Application Support/Code/CachedExtensionVSIXs"/*
    echo "    ‚úÖ Cleared"
fi

if [ -d "$HOME/Library/Application Support/Code/CachedExtensions" ]; then
    echo "  Clearing CachedExtensions..."
    rm -rf "$HOME/Library/Application Support/Code/CachedExtensions"/*
    echo "    ‚úÖ Cleared"
fi

# Extension state cache
if [ -d "$HOME/Library/Application Support/Code/User/workspaceStorage" ]; then
    echo "  Clearing workspace storage..."
    find "$HOME/Library/Application Support/Code/User/workspaceStorage" -name "*roo*" -o -name "*komplete*" | while read dir; do
        rm -rf "$dir"
    done
    echo "    ‚úÖ Cleared"
fi

echo ""
echo -e "${GREEN}‚úÖ Caches cleared${NC}"
echo ""

# Step 3: Verify VSIX file
echo "üì¶ Step 3: Verifying VSIX package..."
echo ""

VSIX_PATH="/Users/imorgado/Projects/Roo-Code/bin/komplete-kontrol-3.38.1.vsix"

if [ ! -f "$VSIX_PATH" ]; then
    echo -e "${RED}‚ùå ERROR: VSIX file not found!${NC}"
    echo ""
    echo "Building VSIX now..."
    cd /Users/imorgado/Projects/Roo-Code
    pnpm run vsix

    if [ ! -f "$VSIX_PATH" ]; then
        echo -e "${RED}‚ùå Build failed! Cannot continue.${NC}"
        exit 1
    fi
fi

VSIX_SIZE=$(ls -lh "$VSIX_PATH" | awk '{print $5}')
echo -e "${GREEN}‚úÖ VSIX found${NC}"
echo "   Location: $VSIX_PATH"
echo "   Size: $VSIX_SIZE"
echo ""

# Step 4: Manual extraction (since VSCode install is failing)
echo "üìÇ Step 4: Manually extracting VSIX..."
echo ""

EXT_DIR="$HOME/.vscode/extensions/kompletekontrol.komplete-kontrol-3.38.1"

# Create extension directory
mkdir -p "$EXT_DIR"

# Extract VSIX (it's just a zip file)
echo "  Extracting VSIX to extension directory..."
cd "$EXT_DIR"
unzip -q "$VSIX_PATH"

# Move contents from extension/ subdirectory to root if needed
if [ -d "extension" ]; then
    echo "  Moving files from extension/ subdirectory..."
    mv extension/* .
    rmdir extension
fi

# Verify package.json exists
if [ -f "$EXT_DIR/package.json" ]; then
    echo -e "  ${GREEN}‚úÖ package.json found${NC}"

    # Show extension details
    EXT_NAME=$(grep -o '"displayName".*' "$EXT_DIR/package.json" | head -1 | cut -d'"' -f4)
    EXT_VERSION=$(grep -o '"version".*' "$EXT_DIR/package.json" | head -1 | cut -d'"' -f4)

    echo "  Name: $EXT_NAME"
    echo "  Version: $EXT_VERSION"
else
    echo -e "  ${RED}‚ùå package.json still missing!${NC}"
    echo ""
    echo "Checking VSIX contents..."
    unzip -l "$VSIX_PATH" | grep -i package.json
    exit 1
fi

echo ""
echo -e "${GREEN}‚úÖ Extension installed successfully${NC}"
echo ""

# Step 5: Set correct permissions
echo "üîê Step 5: Setting permissions..."
echo ""
chmod -R 755 "$EXT_DIR"
echo -e "${GREEN}‚úÖ Permissions set${NC}"
echo ""

# Step 6: Verify installation
echo "üîç Step 6: Verifying installation..."
echo ""

REQUIRED_FILES=(
    "package.json"
    "dist/extension.js"
    "assets/icons/icon.svg"
    "assets/icons/icon.png"
)

ALL_GOOD=true
for file in "${REQUIRED_FILES[@]}"; do
    if [ -f "$EXT_DIR/$file" ]; then
        echo -e "  ${GREEN}‚úÖ${NC} $file"
    else
        echo -e "  ${RED}‚ùå${NC} $file (missing)"
        ALL_GOOD=false
    fi
done

echo ""

if [ "$ALL_GOOD" = true ]; then
    echo -e "${GREEN}‚úÖ All required files present!${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Some files are missing, but this might still work${NC}"
fi

echo ""
echo "================================================="
echo "üéâ INSTALLATION COMPLETE!"
echo "================================================="
echo ""
echo -e "${YELLOW}‚ö†Ô∏è  IMPORTANT NEXT STEPS:${NC}"
echo ""
echo "1. Open Visual Studio Code"
echo ""
echo "2. You should see 'KOMPLETE-KONTROL' in the Activity Bar (left sidebar)"
echo ""
echo "3. If you don't see it immediately:"
echo "   - Press Cmd+Shift+P"
echo "   - Type: 'Developer: Reload Window'"
echo "   - Press Enter"
echo ""
echo "4. Check for the extension:"
echo "   - Go to Extensions panel (Cmd+Shift+X)"
echo "   - Search for 'KOMPLETE-KONTROL'"
echo "   - It should show as installed"
echo ""
echo "5. If there are any errors:"
echo "   - Open Developer Tools: Help ‚Üí Toggle Developer Tools"
echo "   - Check Console tab for errors"
echo ""
echo "================================================="
echo ""
echo "Extension location: $EXT_DIR"
echo ""
