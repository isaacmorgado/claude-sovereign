'use client'

import { useState, type FormEvent } from 'react'
import { useAuth } from '@/lib/auth-context'
import styles from './page.module.css'

export default function SettingsPage() {
  const { user, logout } = useAuth()
  const [name, setName] = useState(user?.name || '')

  const handleSubmit = async (e: FormEvent) => {
    e.preventDefault()
    alert('Profile update not implemented yet')
  }

  const handleLogoutAll = async () => {
    if (confirm('This will sign you out from all devices. Continue?')) {
      await logout()
      window.location.href = '/login'
    }
  }

  return (
    <div className={styles.container}>
      <h1 className={styles.title}>Settings</h1>

      <div className={`card ${styles.section}`}>
        <h2>Profile</h2>
        <form onSubmit={handleSubmit}>
          <div className="form-group">
            <label htmlFor="email">Email</label>
            <input
              id="email"
              type="email"
              className="input"
              value={user?.email || ''}
              disabled
            />
          </div>
          <div className="form-group">
            <label htmlFor="name">Name</label>
            <input
              id="name"
              type="text"
              className="input"
              value={name}
              onChange={(e) => setName(e.target.value)}
              placeholder="Your name"
            />
          </div>
          <button type="submit" className="btn btn-primary">
            Save Changes
          </button>
        </form>
      </div>

      <div className={`card ${styles.section}`}>
        <h2>Account</h2>
        <div className={styles.accountInfo}>
          <div className={styles.infoRow}>
            <span>Member since</span>
            <span>{user?.created_at ? new Date(user.created_at).toLocaleDateString() : 'N/A'}</span>
          </div>
          <div className={styles.infoRow}>
            <span>Subscription</span>
            <span className={styles.tier}>{user?.subscription_tier}</span>
          </div>
        </div>
      </div>

      <div className={`card ${styles.section}`}>
        <h2>Security</h2>
        <div className={styles.securityActions}>
          <button className="btn btn-secondary" onClick={handleLogoutAll}>
            Sign out of all devices
          </button>
        </div>
      </div>

      <div className={`card ${styles.dangerSection}`}>
        <h2>Danger Zone</h2>
        <p className={styles.dangerText}>
          Once you delete your account, there is no going back. Please be certain.
        </p>
        <button className="btn" style={{ background: 'var(--error)', color: 'white' }}>
          Delete Account
        </button>
      </div>
    </div>
  )
}
