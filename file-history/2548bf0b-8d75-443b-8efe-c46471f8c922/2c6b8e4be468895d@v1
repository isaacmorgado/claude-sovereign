"""
User schemas for request/response validation
"""

import re
from pydantic import BaseModel, EmailStr, field_validator
from typing import Optional
from datetime import datetime
from uuid import UUID


class UserCreate(BaseModel):
    email: EmailStr
    password: str
    name: Optional[str] = None
    username: str
    terms_accepted: bool
    referral_code: Optional[str] = None

    @field_validator('username')
    @classmethod
    def validate_username(cls, v: str) -> str:
        if len(v) < 3:
            raise ValueError('Username must be at least 3 characters')
        if len(v) > 30:
            raise ValueError('Username must be 30 characters or less')
        if not re.match(r'^[a-zA-Z0-9_]+$', v):
            raise ValueError('Username can only contain letters, numbers, and underscores')
        if v.lower().startswith('user_'):
            raise ValueError('Username cannot start with "User_"')
        return v

    @field_validator('terms_accepted')
    @classmethod
    def validate_terms(cls, v: bool) -> bool:
        if not v:
            raise ValueError('You must accept the Terms & Conditions')
        return v

    @field_validator('referral_code')
    @classmethod
    def validate_referral_code(cls, v: Optional[str]) -> Optional[str]:
        if v is not None:
            v = v.strip().upper()
            if len(v) < 3 or len(v) > 50:
                raise ValueError('Invalid referral code format')
        return v if v else None


class UserLogin(BaseModel):
    email: EmailStr
    password: str


class ForgotPasswordRequest(BaseModel):
    email: EmailStr


class ResetPasswordRequest(BaseModel):
    token: str
    new_password: str

    @field_validator('new_password')
    @classmethod
    def validate_password(cls, v: str) -> str:
        if len(v) < 8:
            raise ValueError('Password must be at least 8 characters')
        return v


class UserResponse(BaseModel):
    id: UUID
    email: str
    name: Optional[str]
    username: str
    plan: str
    email_verified: bool = False
    avatar_id: int = 1
    created_at: datetime

    class Config:
        from_attributes = True


class UpdateAvatarRequest(BaseModel):
    """Request to update user's avatar"""
    avatar_id: int

    @field_validator('avatar_id')
    @classmethod
    def validate_avatar_id(cls, v: int) -> int:
        if v < 1 or v > 20:
            raise ValueError('Avatar ID must be between 1 and 20')
        return v


class Token(BaseModel):
    access_token: str
    token_type: str = "bearer"
    user: UserResponse


# === FORUM USER PROFILE SCHEMAS ===

class ForumUserProfileResponse(BaseModel):
    """User forum profile with activity stats"""
    id: UUID
    username: str
    forum_posts_count: int
    forum_comments_count: int
    forum_karma: int
    member_since: datetime

    class Config:
        from_attributes = True


class UserPostItem(BaseModel):
    """User's post in their profile list"""
    id: UUID
    title: str
    content_preview: str
    sub_forum_slug: str
    category_slug: str
    is_pinned: bool
    is_guide: bool
    vote_count: int
    comment_count: int
    user_vote: Optional[str] = None
    created_at: datetime

    class Config:
        from_attributes = True


class UserPostListResponse(BaseModel):
    """Paginated list of user's posts"""
    posts: list[UserPostItem]
    total_count: int
    has_more: bool


class UserCommentItem(BaseModel):
    """User's comment in their profile list"""
    id: UUID
    content: str
    post_id: UUID
    post_title: str
    category_slug: str
    vote_count: int
    user_vote: Optional[str] = None
    created_at: datetime

    class Config:
        from_attributes = True


class UserCommentListResponse(BaseModel):
    """Paginated list of user's comments"""
    comments: list[UserCommentItem]
    total_count: int
    has_more: bool


# === USER SEARCH SCHEMAS (for @mention autocomplete) ===

class UserSearchResult(BaseModel):
    """User result for @mention autocomplete"""
    id: UUID
    username: str

    class Config:
        from_attributes = True


class UserSearchResponse(BaseModel):
    """List of users matching search query"""
    users: list[UserSearchResult]
    total_count: int
