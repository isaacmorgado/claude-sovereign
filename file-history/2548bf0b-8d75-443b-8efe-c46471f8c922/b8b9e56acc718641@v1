'use client';

import { useState } from 'react';
import { Check } from 'lucide-react';
import { Avatar, AVATAR_COLORS } from './Avatar';

interface AvatarSelectorProps {
  currentAvatarId: number;
  username: string;
  onSelect: (avatarId: number) => void;
  onSave?: () => void;
  isSaving?: boolean;
}

export function AvatarSelector({
  currentAvatarId,
  username,
  onSelect,
  onSave,
  isSaving = false,
}: AvatarSelectorProps) {
  const [selectedId, setSelectedId] = useState(currentAvatarId);

  const handleSelect = (id: number) => {
    setSelectedId(id);
    onSelect(id);
  };

  return (
    <div className="space-y-4">
      {/* Preview */}
      <div className="flex items-center gap-4 p-4 rounded-xl bg-neutral-900/50 border border-white/5">
        <Avatar avatarId={selectedId} username={username} size="xl" />
        <div>
          <p className="text-white font-medium">{username}</p>
          <p className="text-neutral-400 text-sm">Avatar #{selectedId}</p>
        </div>
      </div>

      {/* Avatar Grid */}
      <div className="grid grid-cols-5 sm:grid-cols-10 gap-2">
        {Array.from({ length: 20 }, (_, i) => i + 1).map((id) => {
          const isSelected = id === selectedId;
          return (
            <button
              key={id}
              onClick={() => handleSelect(id)}
              className={`relative p-1 rounded-xl transition-all ${
                isSelected
                  ? 'ring-2 ring-cyan-500 ring-offset-2 ring-offset-neutral-900'
                  : 'hover:ring-2 hover:ring-white/20 hover:ring-offset-2 hover:ring-offset-neutral-900'
              }`}
              disabled={isSaving}
            >
              <Avatar avatarId={id} username={username} size="md" />
              {isSelected && (
                <div className="absolute -top-1 -right-1 w-4 h-4 rounded-full bg-cyan-500 flex items-center justify-center">
                  <Check size={10} className="text-white" />
                </div>
              )}
            </button>
          );
        })}
      </div>

      {/* Save Button */}
      {onSave && selectedId !== currentAvatarId && (
        <button
          onClick={onSave}
          disabled={isSaving}
          className="w-full py-3 px-4 rounded-xl bg-cyan-500 hover:bg-cyan-400 text-white font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
        >
          {isSaving ? 'Saving...' : 'Save Avatar'}
        </button>
      )}
    </div>
  );
}
