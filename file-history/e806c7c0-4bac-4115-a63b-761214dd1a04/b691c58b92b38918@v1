"""
Analysis database model - stores facial analysis results
"""

import uuid
from datetime import datetime
from sqlalchemy import Column, String, DateTime, ForeignKey, JSON
from sqlalchemy.dialects.postgresql import UUID
from sqlalchemy.orm import relationship

from app.database import Base


class Analysis(Base):
    __tablename__ = "analyses"

    id = Column(UUID(as_uuid=True), primary_key=True, default=uuid.uuid4)
    user_id = Column(UUID(as_uuid=True), ForeignKey("users.id"), nullable=False)

    # Image URLs (stored in S3)
    front_image_url = Column(String, nullable=True)
    side_image_url = Column(String, nullable=True)

    # Landmark data (JSON)
    front_landmarks = Column(JSON, nullable=True)
    side_landmarks = Column(JSON, nullable=True)

    # Calculated scores (computed client-side, stored for history)
    scores = Column(JSON, nullable=True)

    # Metadata
    gender = Column(String, nullable=True)
    ethnicity = Column(String, nullable=True)

    created_at = Column(DateTime, default=datetime.utcnow)

    # Relationships
    user = relationship("User", back_populates="analyses")

    def __repr__(self):
        return f"<Analysis {self.id}>"
