/** @type {import('next').NextConfig} */
const nextConfig = {
  webpack: (config, { isServer }) => {
    // Exclude Human.js Node version from client bundle
    if (!isServer) {
      config.resolve.alias = {
        ...config.resolve.alias,
        // Force browser version of Human.js
        '@vladmandic/human': '@vladmandic/human/dist/human.esm.js',
      };
      // Ignore Node.js specific modules
      config.resolve.fallback = {
        ...config.resolve.fallback,
        fs: false,
        path: false,
        os: false,
      };
    }
    return config;
  },
};

export default nextConfig;
