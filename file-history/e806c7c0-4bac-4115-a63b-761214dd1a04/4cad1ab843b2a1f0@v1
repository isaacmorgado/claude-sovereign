"""
Application configuration using Pydantic Settings
"""

from pydantic_settings import BaseSettings
from functools import lru_cache


class Settings(BaseSettings):
    # App
    app_name: str = "LOOKSMAXX API"
    debug: bool = False

    # Database
    database_url: str = "postgresql+asyncpg://localhost/looksmaxx"

    # JWT Auth
    jwt_secret: str = "change-me-in-production"
    jwt_algorithm: str = "HS256"
    jwt_expire_minutes: int = 60 * 24 * 7  # 7 days

    # Stripe
    stripe_secret_key: str = ""
    stripe_webhook_secret: str = ""
    stripe_price_basic: str = ""  # price_xxx for Basic plan
    stripe_price_pro: str = ""  # price_xxx for Pro plan

    # S3 Storage
    aws_access_key_id: str = ""
    aws_secret_access_key: str = ""
    s3_bucket: str = "looksmaxx-images"
    s3_region: str = "us-east-1"

    # Frontend
    frontend_url: str = "http://localhost:3000"

    class Config:
        env_file = ".env"


@lru_cache()
def get_settings() -> Settings:
    return Settings()
