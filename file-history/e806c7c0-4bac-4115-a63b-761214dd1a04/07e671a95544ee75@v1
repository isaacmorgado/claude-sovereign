"""
Analysis schemas for request/response validation
"""

from pydantic import BaseModel
from typing import Optional, Any
from datetime import datetime
from uuid import UUID


class AnalysisCreate(BaseModel):
    front_image_url: Optional[str] = None
    side_image_url: Optional[str] = None
    front_landmarks: Optional[dict] = None
    side_landmarks: Optional[dict] = None
    scores: Optional[dict] = None
    gender: Optional[str] = None
    ethnicity: Optional[str] = None


class AnalysisResponse(BaseModel):
    id: UUID
    front_image_url: Optional[str]
    side_image_url: Optional[str]
    front_landmarks: Optional[Any]
    side_landmarks: Optional[Any]
    scores: Optional[Any]
    gender: Optional[str]
    ethnicity: Optional[str]
    created_at: datetime

    class Config:
        from_attributes = True
