'use client';

import { useState, useMemo } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { ChevronDown, AlertTriangle, CheckCircle, Sparkles } from 'lucide-react';
import { Strength, Flaw, Recommendation, getScoreColor } from '@/types/results';
import { generateAIDescription, FlawDetail } from '@/lib/aiDescriptions';

// ============================================
// QUALITY TIER BADGES (FaceIQ Style) - Strengths
// ============================================

type QualityTier = 'ideal' | 'excellent' | 'good' | 'below_average';

interface QualityConfig {
  label: string;
  textColor: string;
  bgColor: string;
}

const QUALITY_CONFIGS: Record<QualityTier, QualityConfig> = {
  ideal: {
    label: 'Ideal',
    textColor: 'rgb(8, 145, 178)',    // cyan-600
    bgColor: 'rgb(207, 250, 254)',    // cyan-100
  },
  excellent: {
    label: 'Excellent',
    textColor: 'rgb(4, 120, 87)',     // emerald-700
    bgColor: 'rgb(209, 250, 229)',    // emerald-100
  },
  good: {
    label: 'Good',
    textColor: 'rgb(21, 128, 61)',    // green-700
    bgColor: 'rgb(220, 252, 231)',    // green-100
  },
  below_average: {
    label: 'Average',
    textColor: 'rgb(113, 113, 122)',  // gray-500
    bgColor: 'rgb(244, 244, 245)',    // gray-100
  },
};

function QualityBadge({ quality }: { quality: QualityTier }) {
  const config = QUALITY_CONFIGS[quality] || QUALITY_CONFIGS.good;

  return (
    <span
      className="inline-flex items-center px-2 py-0.5 sm:px-2.5 sm:py-1 rounded-md text-[10px] sm:text-xs font-medium tracking-wide whitespace-nowrap"
      style={{
        color: config.textColor,
        backgroundColor: config.bgColor,
      }}
    >
      {config.label}
    </span>
  );
}

// ============================================
// SEVERITY BADGES (FaceIQ Style) - Flaws
// ============================================

type SeverityLevel = 'extremely_severe' | 'severe' | 'moderate' | 'minor';

interface SeverityConfig {
  label: string;
  textColor: string;
  bgColor: string;
  borderColor?: string;
}

const SEVERITY_CONFIGS: Record<SeverityLevel, SeverityConfig> = {
  extremely_severe: {
    label: 'extremely severe',
    textColor: 'rgb(127, 29, 29)',     // red-900
    bgColor: 'rgb(254, 202, 202)',     // red-200
  },
  severe: {
    label: 'severe',
    textColor: 'rgb(185, 28, 28)',     // red-700
    bgColor: 'rgb(254, 226, 226)',     // red-50
    borderColor: 'rgb(254, 202, 202)', // red-200
  },
  moderate: {
    label: 'moderate',
    textColor: 'rgb(194, 65, 12)',     // orange-700
    bgColor: 'rgb(255, 237, 213)',     // orange-50
    borderColor: 'rgb(254, 215, 170)', // orange-200
  },
  minor: {
    label: 'minor',
    textColor: 'rgb(161, 98, 7)',      // yellow-700
    bgColor: 'rgb(254, 249, 195)',     // yellow-50
    borderColor: 'rgb(254, 240, 138)', // yellow-200
  },
};

function getSeverityFromImpact(harmonyLost: number): SeverityLevel {
  if (harmonyLost >= 0.8) return 'extremely_severe';
  if (harmonyLost >= 0.5) return 'severe';
  if (harmonyLost >= 0.3) return 'moderate';
  return 'minor';
}

function getSeverityFromScore(score: number): SeverityLevel {
  if (score <= 2) return 'extremely_severe';
  if (score <= 4) return 'severe';
  if (score <= 6) return 'moderate';
  return 'minor';
}

function SeverityBadge({ severity }: { severity: SeverityLevel }) {
  const config = SEVERITY_CONFIGS[severity];

  return (
    <span
      className="inline-flex items-center px-2 py-0.5 sm:px-2.5 sm:py-1 rounded-md text-[10px] sm:text-xs font-medium tracking-wide whitespace-nowrap"
      style={{
        color: config.textColor,
        backgroundColor: config.bgColor,
        border: config.borderColor ? `1px solid ${config.borderColor}` : undefined,
      }}
    >
      {config.label}
    </span>
  );
}

// ============================================
// PROCEDURE PHASE BADGE
// ============================================

type ProcedurePhase = 'Foundational' | 'Non-Invasive' | 'Minimally Invasive' | 'Surgical';

interface PhaseConfig {
  textColor: string;
  bgColor: string;
}

const PHASE_CONFIGS: Record<ProcedurePhase, PhaseConfig> = {
  Foundational: {
    textColor: 'rgb(4, 120, 87)',     // emerald-700
    bgColor: 'rgb(209, 250, 229)',    // emerald-50
  },
  'Non-Invasive': {
    textColor: 'rgb(29, 78, 216)',    // blue-700
    bgColor: 'rgb(219, 234, 254)',    // blue-50
  },
  'Minimally Invasive': {
    textColor: 'rgb(109, 40, 217)',   // violet-700
    bgColor: 'rgb(237, 233, 254)',    // violet-50
  },
  Surgical: {
    textColor: 'rgb(126, 34, 206)',   // purple-700
    bgColor: 'rgb(243, 232, 255)',    // purple-50
  },
};

function PhaseBadge({ phase }: { phase: ProcedurePhase }) {
  const config = PHASE_CONFIGS[phase] || PHASE_CONFIGS['Non-Invasive'];

  return (
    <span
      className="inline-flex items-center px-1.5 py-0.5 rounded text-[9px] sm:text-[10px] font-medium"
      style={{
        color: config.textColor,
        backgroundColor: config.bgColor,
      }}
    >
      {phase}
    </span>
  );
}

// ============================================
// CONTRIBUTING/AFFECTED RATIO ITEM
// ============================================

interface RatioItemProps {
  name: string;
  score: number;
  onClick?: () => void;
  animationDelay?: number;
}

function RatioItem({ name, score, onClick, animationDelay = 0 }: RatioItemProps) {
  return (
    <button
      onClick={onClick}
      className="w-full flex items-center justify-between py-2 sm:py-2.5 px-2.5 sm:px-3 rounded-md bg-white border border-gray-200 transition-all duration-200 hover:border-gray-300 hover:shadow-sm text-left cursor-pointer animate-fade-in"
      style={{
        animationDuration: '0.2s',
        animationDelay: `${animationDelay}s`,
      }}
    >
      <span className="text-xs sm:text-sm text-gray-700 font-medium">{name}</span>
      <div className="flex items-baseline gap-0.5 sm:gap-1">
        <span
          className="text-xs sm:text-sm font-semibold"
          style={{ color: getScoreColor(score) }}
        >
          {score.toFixed(1)}
        </span>
        <span className="text-[10px] sm:text-xs text-gray-500">/10</span>
      </div>
    </button>
  );
}

// ============================================
// PLAN ITEM (Recommendation)
// ============================================

interface PlanItemProps {
  name: string;
  phase: ProcedurePhase;
  inPlan?: boolean;
  animationDelay?: number;
}

function PlanItem({ name, phase, inPlan = true, animationDelay = 0 }: PlanItemProps) {
  return (
    <div
      className="flex items-center justify-between py-2 sm:py-2.5 px-2.5 sm:px-3 rounded-md bg-white border border-gray-200 animate-fade-in"
      style={{
        animationDuration: '0.2s',
        animationDelay: `${animationDelay}s`,
      }}
    >
      <span className="text-xs sm:text-sm text-gray-700 font-medium">{name}</span>
      <div className="flex items-center gap-2">
        {inPlan && (
          <span className="text-[9px] sm:text-[10px] px-1.5 py-0.5 rounded bg-emerald-100 text-emerald-700 font-medium">
            In Plan
          </span>
        )}
        <PhaseBadge phase={phase} />
      </div>
    </div>
  );
}

// ============================================
// STRENGTH CARD (FaceIQ Style)
// ============================================

interface StrengthCardProps {
  strength: Strength;
  isExpanded?: boolean;
  onToggle?: () => void;
  onRatioClick?: (ratio: Strength['responsibleRatios'][0]) => void;
  animationDelay?: number;
}

export function StrengthCard({
  strength,
  isExpanded = false,
  onToggle,
  onRatioClick,
  animationDelay = 0,
}: StrengthCardProps) {
  // Get score color for the average score
  const scoreColor = getScoreColor(strength.avgScore);

  return (
    <div
      className="rounded-lg bg-white border border-gray-200 overflow-hidden transition-all duration-200 hover:border-gray-300 hover:shadow-sm animate-fade-in"
      style={{ animationDelay: `${animationDelay}s` }}
    >
      {/* Header */}
      <button
        onClick={onToggle}
        className="w-full p-4 sm:p-6 hover:bg-gray-50/50 transition-colors duration-200 text-left"
      >
        <div className="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3 sm:gap-4">
          {/* Left: Badge + Content */}
          <div className="flex items-start gap-2 sm:gap-3 flex-1 min-w-0">
            <QualityBadge quality={strength.qualityLevel} />
            <div className="flex-1 min-w-0">
              <h4 className="text-sm sm:text-base font-semibold text-gray-900 mb-1 sm:mb-1.5 leading-snug">
                {strength.strengthName}
              </h4>
              <p className="text-xs sm:text-sm text-gray-600 leading-relaxed">
                {strength.summary}
              </p>
            </div>
          </div>

          {/* Right: Score + Chevron */}
          <div className="flex items-center justify-between sm:justify-end gap-3 sm:gap-4 flex-shrink-0 sm:flex-col sm:items-end sm:gap-1.5">
            <div className="text-right">
              <div
                className="text-lg sm:text-xl font-semibold tracking-tight transition-colors duration-200"
                style={{ color: scoreColor }}
              >
                {strength.avgScore.toFixed(2)}
              </div>
              <div className="text-[10px] sm:text-xs text-gray-500 font-medium mt-0.5">avg /10</div>
            </div>
            <motion.div
              animate={{ rotate: isExpanded ? 180 : 0 }}
              transition={{ duration: 0.3 }}
            >
              <ChevronDown className="w-4 h-4 text-gray-400" />
            </motion.div>
          </div>
        </div>
      </button>

      {/* Expanded Content */}
      <AnimatePresence initial={false}>
        {isExpanded && (
          <motion.div
            initial={{ height: 0, opacity: 0 }}
            animate={{ height: 'auto', opacity: 1 }}
            exit={{ height: 0, opacity: 0 }}
            transition={{ duration: 0.3, ease: 'easeInOut' }}
            className="overflow-hidden"
          >
            <div className="border-t border-gray-200 bg-gray-50/50 px-4 sm:px-6 py-3 sm:py-4">
              <div className="text-[10px] sm:text-xs font-medium text-gray-500 uppercase tracking-wider mb-2 sm:mb-3">
                Contributing Ratios
              </div>
              <div className="space-y-2">
                {strength.responsibleRatios.map((ratio, i) => (
                  <RatioItem
                    key={ratio.ratioId}
                    name={ratio.ratioName}
                    score={ratio.score}
                    onClick={() => onRatioClick?.(ratio)}
                    animationDelay={i * 0.03}
                  />
                ))}
              </div>
            </div>
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  );
}

// ============================================
// FLAW CARD (FaceIQ Style - Areas of Improvement)
// ============================================

interface FlawCardProps {
  flaw: Flaw;
  isExpanded?: boolean;
  onToggle?: () => void;
  onRatioClick?: (ratio: Flaw['responsibleRatios'][0]) => void;
  recommendations?: Recommendation[];
  animationDelay?: number;
}

export function FlawCard({
  flaw,
  isExpanded = false,
  onToggle,
  onRatioClick,
  recommendations = [],
  animationDelay = 0,
}: FlawCardProps) {
  const severity = getSeverityFromImpact(flaw.harmonyPercentageLost);

  // Generate AI descriptions for understanding
  const aiDetails = useMemo<FlawDetail[]>(() => {
    return flaw.responsibleRatios.map((ratio) =>
      generateAIDescription(
        ratio.ratioName.toLowerCase().replace(/\s+/g, ''),
        ratio.ratioName,
        ratio.value,
        ratio.idealMin,
        ratio.idealMax,
        ratio.score,
        ratio.unit,
        flaw.categoryName
      )
    );
  }, [flaw.responsibleRatios, flaw.categoryName]);

  // Find matching recommendations for this flaw
  const matchedRecommendations = useMemo(() => {
    const flawRatioIds = new Set(flaw.responsibleRatios.map(r => r.ratioId));
    return recommendations.filter(rec =>
      rec.matchedFlaws?.some(f => f.toLowerCase().includes(flaw.flawName.toLowerCase())) ||
      rec.matchedRatios?.some(r => flawRatioIds.has(r))
    ).slice(0, 3); // Limit to 3 recommendations
  }, [flaw, recommendations]);

  // Map phase names
  const mapPhase = (phase: string): ProcedurePhase => {
    if (phase === 'Foundational') return 'Foundational';
    if (phase === 'Non-Invasive' || phase === 'Minimally Invasive') return phase as ProcedurePhase;
    if (phase === 'Surgical') return 'Surgical';
    return 'Non-Invasive';
  };

  return (
    <div
      className="rounded-lg bg-white border border-gray-200 overflow-hidden transition-all duration-200 hover:border-gray-300 hover:shadow-sm animate-fade-in"
      style={{ animationDelay: `${animationDelay}s` }}
    >
      {/* Header */}
      <button
        onClick={onToggle}
        className="w-full p-4 sm:p-6 hover:bg-gray-50/50 transition-colors duration-200 text-left"
      >
        <div className="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3 sm:gap-4">
          {/* Left: Badge + Content */}
          <div className="flex items-start gap-2 sm:gap-3 flex-1 min-w-0">
            <SeverityBadge severity={severity} />
            <div className="flex-1 min-w-0">
              <h4 className="text-sm sm:text-base font-semibold text-gray-900 mb-1 sm:mb-1.5 leading-snug">
                {flaw.flawName}
              </h4>
              <p className="text-xs sm:text-sm text-gray-600 leading-relaxed">
                {flaw.summary}
              </p>
            </div>
          </div>

          {/* Right: Points impact + Chevron */}
          <div className="flex items-center justify-between sm:justify-end gap-3 sm:gap-4 flex-shrink-0 sm:flex-col sm:items-end sm:gap-1.5">
            <div className="text-right space-y-1">
              <div className="text-lg sm:text-xl font-semibold tracking-tight text-red-600">
                -{flaw.harmonyPercentageLost.toFixed(2)}
              </div>
              <div className="text-[10px] sm:text-xs text-gray-500 font-medium">points</div>
              {flaw.rollingHarmonyPercentageLost !== undefined && (
                <div className="text-[10px] text-gray-400 font-medium pt-0.5 border-t border-gray-200 mt-1 pt-1">
                  Rolling: -{flaw.rollingHarmonyPercentageLost.toFixed(2)}
                </div>
              )}
            </div>
            <motion.div
              animate={{ rotate: isExpanded ? 180 : 0 }}
              transition={{ duration: 0.3 }}
            >
              <ChevronDown className="w-4 h-4 text-gray-400" />
            </motion.div>
          </div>
        </div>
      </button>

      {/* Expanded Content */}
      <AnimatePresence initial={false}>
        {isExpanded && (
          <motion.div
            initial={{ height: 0, opacity: 0 }}
            animate={{ height: 'auto', opacity: 1 }}
            exit={{ height: 0, opacity: 0 }}
            transition={{ duration: 0.3, ease: 'easeInOut' }}
            className="overflow-hidden"
          >
            {/* Affected Ratios Section */}
            <div className="border-t border-gray-200 bg-gray-50/50 px-4 sm:px-6 py-3 sm:py-4">
              <div className="text-[10px] sm:text-xs font-medium text-gray-500 uppercase tracking-wider mb-2 sm:mb-3">
                Affected Ratios
              </div>
              <div className="space-y-2">
                {flaw.responsibleRatios.map((ratio, i) => (
                  <RatioItem
                    key={ratio.ratioId}
                    name={ratio.ratioName}
                    score={ratio.score}
                    onClick={() => onRatioClick?.(ratio)}
                    animationDelay={i * 0.03}
                  />
                ))}
              </div>
            </div>

            {/* Your Plan Section (if there are matched recommendations) */}
            {matchedRecommendations.length > 0 && (
              <div className="border-t border-gray-200 bg-emerald-50/30 px-4 sm:px-6 py-3 sm:py-4">
                <div className="flex items-center gap-1.5 mb-2 sm:mb-3">
                  <Sparkles className="w-3 h-3 text-emerald-600" />
                  <span className="text-[10px] sm:text-xs font-medium text-emerald-700 uppercase tracking-wider">
                    Your Plan
                  </span>
                </div>
                <div className="space-y-2">
                  {matchedRecommendations.map((rec, i) => (
                    <PlanItem
                      key={rec.ref_id}
                      name={rec.name}
                      phase={mapPhase(rec.phase)}
                      inPlan={true}
                      animationDelay={i * 0.03}
                    />
                  ))}
                </div>
              </div>
            )}
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  );
}

// ============================================
// STRENGTHS SECTION (Container)
// ============================================

interface StrengthsSectionProps {
  strengths: Strength[];
  onRatioClick?: (ratio: Strength['responsibleRatios'][0]) => void;
  maxVisible?: number;
}

export function StrengthsSection({
  strengths,
  onRatioClick,
  maxVisible = 5,
}: StrengthsSectionProps) {
  const [expandedId, setExpandedId] = useState<string | null>(null);
  const [showAll, setShowAll] = useState(false);

  const visibleStrengths = showAll ? strengths : strengths.slice(0, maxVisible);
  const hasMore = strengths.length > maxVisible;

  return (
    <div className="rounded-lg bg-white border border-gray-200 p-4 sm:p-6 lg:p-8">
      <div className="flex items-center justify-between mb-4 sm:mb-6">
        <h3 className="text-base sm:text-lg font-semibold tracking-tight text-gray-900">
          Key Strengths
        </h3>
      </div>

      <div className="space-y-3">
        {visibleStrengths.map((strength, i) => (
          <StrengthCard
            key={strength.id}
            strength={strength}
            isExpanded={expandedId === strength.id}
            onToggle={() => setExpandedId(expandedId === strength.id ? null : strength.id)}
            onRatioClick={onRatioClick}
            animationDelay={i * 0.04}
          />
        ))}
      </div>

      {hasMore && (
        <button
          onClick={() => setShowAll(!showAll)}
          className="w-full mt-6 py-3 rounded-lg bg-white border border-gray-200 hover:border-gray-300 hover:shadow-sm transition-all duration-200 text-sm font-medium text-gray-900"
        >
          <span className="flex items-center justify-center gap-2">
            <span>{showAll ? 'Show Less' : `Show All ${strengths.length} Strengths`}</span>
            <motion.div animate={{ rotate: showAll ? 180 : 0 }} transition={{ duration: 0.2 }}>
              <ChevronDown className="w-4 h-4 text-gray-500" />
            </motion.div>
          </span>
        </button>
      )}
    </div>
  );
}

// ============================================
// FLAWS SECTION (Areas of Improvement Container)
// ============================================

interface FlawsSectionProps {
  flaws: Flaw[];
  recommendations?: Recommendation[];
  onRatioClick?: (ratio: Flaw['responsibleRatios'][0]) => void;
  maxVisible?: number;
}

export function FlawsSection({
  flaws,
  recommendations = [],
  onRatioClick,
  maxVisible = 5,
}: FlawsSectionProps) {
  const [expandedId, setExpandedId] = useState<string | null>(null);
  const [showAll, setShowAll] = useState(false);

  const visibleFlaws = showAll ? flaws : flaws.slice(0, maxVisible);
  const hasMore = flaws.length > maxVisible;

  return (
    <div className="rounded-lg bg-white border border-gray-200 p-4 sm:p-6 lg:p-8">
      <div className="flex items-center justify-between mb-4 sm:mb-6">
        <h3 className="text-base sm:text-lg font-semibold tracking-tight text-gray-900">
          Areas of Improvement
        </h3>
      </div>

      <div className="space-y-3">
        {visibleFlaws.map((flaw, i) => (
          <FlawCard
            key={flaw.id}
            flaw={flaw}
            isExpanded={expandedId === flaw.id}
            onToggle={() => setExpandedId(expandedId === flaw.id ? null : flaw.id)}
            onRatioClick={onRatioClick}
            recommendations={recommendations}
            animationDelay={i * 0.04}
          />
        ))}
      </div>

      {hasMore && (
        <button
          onClick={() => setShowAll(!showAll)}
          className="w-full mt-6 py-3 rounded-lg bg-white border border-gray-200 hover:border-gray-300 hover:shadow-sm transition-all duration-200 text-sm font-medium text-gray-900"
        >
          <span className="flex items-center justify-center gap-2">
            <span>{showAll ? 'Show Less' : `Show All ${flaws.length} Areas`}</span>
            <motion.div animate={{ rotate: showAll ? 180 : 0 }} transition={{ duration: 0.2 }}>
              <ChevronDown className="w-4 h-4 text-gray-500" />
            </motion.div>
          </span>
        </button>
      )}
    </div>
  );
}

// ============================================
// COMPACT BADGES (for use elsewhere)
// ============================================

interface CompactStrengthBadgeProps {
  strength: Strength;
  onClick?: () => void;
}

export function CompactStrengthBadge({ strength, onClick }: CompactStrengthBadgeProps) {
  return (
    <button
      onClick={onClick}
      className="inline-flex items-center gap-1.5 px-2 py-1 bg-green-50 border border-green-200 rounded-lg hover:bg-green-100 transition-colors"
    >
      <CheckCircle size={12} className="text-green-600" />
      <span className="text-xs text-green-700">{strength.strengthName}</span>
    </button>
  );
}

interface CompactFlawBadgeProps {
  flaw: Flaw;
  onClick?: () => void;
}

export function CompactFlawBadge({ flaw, onClick }: CompactFlawBadgeProps) {
  const severity = getSeverityFromImpact(flaw.harmonyPercentageLost);
  const config = SEVERITY_CONFIGS[severity];

  return (
    <button
      onClick={onClick}
      className="inline-flex items-center gap-1.5 px-2 py-1 rounded-lg hover:opacity-80 transition-all"
      style={{
        backgroundColor: config.bgColor,
        border: config.borderColor ? `1px solid ${config.borderColor}` : undefined,
      }}
    >
      <AlertTriangle size={12} style={{ color: config.textColor }} />
      <span className="text-xs" style={{ color: config.textColor }}>{flaw.flawName}</span>
    </button>
  );
}

// Export utility functions
export { getSeverityFromImpact, getSeverityFromScore, SEVERITY_CONFIGS };
export { SeverityBadge };
export type { SeverityLevel };
