import type { Request, Response, NextFunction } from 'express';
import * as billingService from '../services/billing-service.js';
import type { AuthenticatedRequest, ApiResponse } from '../types/api.js';
import type { CheckoutSession, PortalSession, SubscriptionStatus } from '../types/billing.js';

type CheckoutResponse = ApiResponse<CheckoutSession>;
type PortalResponse = ApiResponse<PortalSession>;
type StatusResponse = ApiResponse<SubscriptionStatus>;
type WebhookResponse = ApiResponse<{ received: boolean }>;

export async function createCheckout(
  req: Request,
  res: Response<CheckoutResponse>,
  next: NextFunction
): Promise<void> {
  try {
    const authReq = req as AuthenticatedRequest;
    const validated = billingService.checkoutSchema.parse(req.body);
    const session = await billingService.createCheckoutSession(authReq.user, validated.tier, validated.interval);

    res.json({
      success: true,
      data: session,
    });
  } catch (error) {
    next(error);
  }
}

export async function createPortal(
  req: Request,
  res: Response<PortalResponse>,
  next: NextFunction
): Promise<void> {
  try {
    const authReq = req as AuthenticatedRequest;
    const session = await billingService.createPortalSession(authReq.user);

    res.json({
      success: true,
      data: session,
    });
  } catch (error) {
    next(error);
  }
}

export async function getStatus(
  req: Request,
  res: Response<StatusResponse>,
  next: NextFunction
): Promise<void> {
  try {
    const authReq = req as AuthenticatedRequest;
    const status = await billingService.getSubscriptionStatus(authReq.user);

    res.json({
      success: true,
      data: status,
    });
  } catch (error) {
    next(error);
  }
}

export async function handleWebhook(
  req: Request,
  res: Response<WebhookResponse>,
  next: NextFunction
): Promise<void> {
  try {
    const signature = req.headers['stripe-signature'];
    if (!signature || typeof signature !== 'string') {
      res.status(400).json({
        success: false,
        error: 'Missing stripe-signature header',
      });
      return;
    }

    const result = await billingService.handleWebhook(req.body as Buffer, signature);

    res.json({
      success: true,
      data: result,
    });
  } catch (error) {
    next(error);
  }
}
