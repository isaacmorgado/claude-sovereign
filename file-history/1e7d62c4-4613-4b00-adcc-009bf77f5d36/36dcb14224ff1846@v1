/**
 * Test license activation endpoint
 */

const fetch = require('node-fetch');

// Disable SSL verification for local testing
process.env.NODE_TLS_REJECT_UNAUTHORIZED = '0';

async function testActivation() {
  const BACKEND_URL = 'https://127.0.0.1:3847';
  const DANNY_KEY = 'SPLICE-Y2Q9-6G9G-MFQE';

  console.log('\n=== Testing License Activation ===');
  console.log(`Backend: ${BACKEND_URL}`);
  console.log(`License Key: ${DANNY_KEY}`);

  try {
    console.log('\n1. Activating license key...');
    const response = await fetch(`${BACKEND_URL}/license/activate`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        key: DANNY_KEY
      })
    });

    console.log(`Status: ${response.status} ${response.statusText}`);

    const data = await response.json();
    console.log('\nResponse:', JSON.stringify(data, null, 2));

    if (data.success) {
      console.log('\n✅ License activation successful!');
      console.log(`Customer ID: ${data.customerId}`);
      console.log(`Tier: ${data.tierName || data.tier}`);
      console.log(`Hours: ${data.hoursRemaining}/${data.hoursTotal}`);
    } else {
      console.log('\n❌ License activation failed');
      console.log(`Error: ${data.error}`);
    }

    // Test getting license key back
    console.log('\n2. Getting license key with customer ID...');
    const keyResponse = await fetch(`${BACKEND_URL}/license/key`, {
      method: 'GET',
      headers: {
        'x-stripe-customer-id': data.customerId
      }
    });

    const keyData = await keyResponse.json();
    console.log('\nKey lookup:', JSON.stringify(keyData, null, 2));

  } catch (err) {
    console.error('\n❌ Error:', err.message);
    console.error(err.stack);
  }
}

testActivation();
