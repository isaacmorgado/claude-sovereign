<html>
<head>
  <meta charset="utf-8">
  <title>SPLICE</title>
  <style>
    body {
      font-family: Adobe Clean, -apple-system, BlinkMacSystemFont, sans-serif;
      background: #323232;
      color: #e1e1e1;
      margin: 0;
      padding: 16px;
    }
    h1 {
      font-size: 18px;
      font-weight: 500;
      margin: 0 0 16px 0;
    }
    #status {
      padding: 8px;
      background: #1e1e1e;
      border-radius: 4px;
      font-size: 14px;
      margin-bottom: 16px;
    }
    button {
      background: #0d6efd;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      width: 100%;
      margin-bottom: 16px;
    }
    button:hover {
      background: #0b5ed7;
    }
    button:disabled {
      background: #6c757d;
      cursor: not-allowed;
    }
    #clips {
      background: #1e1e1e;
      border-radius: 4px;
      padding: 8px;
      font-size: 12px;
      max-height: 300px;
      overflow-y: auto;
    }
    .clip-item {
      padding: 4px 0;
      border-bottom: 1px solid #444;
    }
    .clip-item:last-child {
      border-bottom: none;
    }
    .no-clips {
      color: #888;
      font-style: italic;
    }
    .results-section {
      margin-top: 16px;
    }
    .results-section h2 {
      font-size: 14px;
      margin: 0 0 8px 0;
      color: #aaa;
    }
    #transcript, #takes {
      background: #1e1e1e;
      border-radius: 4px;
      padding: 8px;
      font-size: 12px;
      max-height: 200px;
      overflow-y: auto;
      margin-bottom: 12px;
    }
    .take-item {
      padding: 6px;
      margin-bottom: 6px;
      background: #2a2a2a;
      border-radius: 4px;
      border-left: 3px solid #555;
      cursor: pointer;
      transition: all 0.15s ease;
    }
    .take-item:hover {
      background: #333;
    }
    .take-item.best {
      border-left-color: #28a745;
      background: #1a2e1a;
    }
    .take-item.best:hover {
      background: #243824;
    }
    .take-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .take-label {
      font-weight: 500;
      margin-bottom: 4px;
    }
    .take-star {
      font-size: 16px;
      color: #555;
    }
    .take-item.best .take-star {
      color: #28a745;
    }
    .take-time {
      color: #888;
      font-size: 11px;
    }
    .take-text {
      margin-top: 4px;
      color: #ccc;
    }
    .take-hint {
      font-size: 11px;
      color: #666;
      margin-bottom: 8px;
      font-style: italic;
    }
    button.analyze-btn {
      background: #28a745;
    }
    button.analyze-btn:hover {
      background: #218838;
    }
    button.apply-btn {
      background: #fd7e14;
    }
    button.apply-btn:hover {
      background: #e96b02;
    }
  </style>
</head>
<body>
  <h1>SPLICE</h1>
  <p id="status">Plugin loaded!</p>
  <button id="readClipsBtn">Read Timeline Clips</button>
  <button id="exportAudioBtn">Export Audio (Test)</button>
  <button id="analyzeBtn" class="analyze-btn">Analyze Audio</button>
  <div id="clips"></div>

  <div class="results-section" id="resultsSection" style="display: none;">
    <h2>Transcript</h2>
    <div id="transcript"></div>
    <h2>Detected Takes</h2>
    <div class="take-hint">Click a take to mark it as best</div>
    <div id="takes"></div>
    <button id="labelTimelineBtn" class="analyze-btn" style="display: none;">Label Clips on Timeline</button>
    <button id="applyTakesBtn" class="apply-btn" style="display: none;">Keep Best Takes Only</button>
  </div>

  <script>
    const ppro = require('premierepro');

    document.getElementById('readClipsBtn').addEventListener('click', async () => {
      const statusEl = document.getElementById('status');
      const clipsEl = document.getElementById('clips');
      const btn = document.getElementById('readClipsBtn');

      btn.disabled = true;
      statusEl.textContent = 'Reading clips...';
      clipsEl.innerHTML = '';

      try {
        const project = await ppro.Project.getActiveProject();
        if (!project) {
          statusEl.textContent = 'No project open';
          btn.disabled = false;
          return;
        }

        const sequence = await project.getActiveSequence();
        if (!sequence) {
          statusEl.textContent = 'No active sequence';
          btn.disabled = false;
          return;
        }

        const clipNames = [];
        const numTracks = await sequence.getVideoTrackCount();

        for (let i = 0; i < numTracks; i++) {
          const track = await sequence.getVideoTrack(i);
          if (!track) continue;

          const clips = await track.getTrackItems(ppro.Constants.TrackItemType.CLIP, false);
          if (!clips) continue;

          for (let j = 0; j < clips.length; j++) {
            const clip = clips[j];
            if (!clip) continue;
            const name = await clip.getName();
            clipNames.push(name);
          }
        }

        if (clipNames.length === 0) {
          clipsEl.innerHTML = '<div class="no-clips">No clips in timeline</div>';
          statusEl.textContent = 'No clips found';
        } else {
          clipsEl.innerHTML = clipNames
            .map(name => `<div class="clip-item">${name}</div>`)
            .join('');
          statusEl.textContent = `Found ${clipNames.length} clip(s)`;
        }
      } catch (err) {
        statusEl.textContent = `Error: ${err.message}`;
        console.error('SPLICE error:', err);
      }

      btn.disabled = false;
    });

    // Export Audio functionality
    // WAV 48kHz 16-bit preset path
    const WAV_PRESET_PATH = '/Applications/Adobe Premiere Pro (Beta)/Adobe Premiere Pro (Beta).app/Contents/Settings/EncoderPresets/Wave48mono16.epr';

    document.getElementById('exportAudioBtn').addEventListener('click', async () => {
      const statusEl = document.getElementById('status');
      const btn = document.getElementById('exportAudioBtn');

      btn.disabled = true;
      statusEl.textContent = 'Preparing audio export...';

      try {
        const project = await ppro.Project.getActiveProject();
        if (!project) {
          statusEl.textContent = 'No project open';
          btn.disabled = false;
          return;
        }

        const sequence = await project.getActiveSequence();
        if (!sequence) {
          statusEl.textContent = 'No active sequence';
          btn.disabled = false;
          return;
        }

        // Get EncoderManager
        const encoderManager = ppro.EncoderManager.getManager();
        if (!encoderManager) {
          statusEl.textContent = 'EncoderManager not available';
          btn.disabled = false;
          return;
        }

        // Use fixed temp path for now (file picker permission issue)
        const outputPath = '/tmp/splice_audio_export.wav';
        statusEl.textContent = `Exporting to: ${outputPath}`;

        // Export with WAV preset
        const result = await encoderManager.exportSequence(
          sequence,
          ppro.EncoderManager.EXPORT_IMMEDIATELY,
          outputPath,
          WAV_PRESET_PATH,
          true // exportFull - export entire sequence
        );

        if (result) {
          statusEl.textContent = `Export complete: ${outputPath}`;
        } else {
          statusEl.textContent = 'Export returned false - check console';
        }

      } catch (err) {
        statusEl.textContent = `Export error: ${err.message}`;
        console.error('SPLICE export error:', err);
        console.error('Full error:', JSON.stringify(err, null, 2));
      }

      btn.disabled = false;
    });

    // Analyze Audio - call backend
    const BACKEND_URL = 'https://127.0.0.1:3847';
    const WAV_PATH = '/tmp/splice_audio_export.wav';

    // Store takes data for applying to timeline
    let currentTakes = null;

    // Render takes list with click handlers
    function renderTakes() {
      const takesEl = document.getElementById('takes');
      const applyBtn = document.getElementById('applyTakesBtn');
      const labelBtn = document.getElementById('labelTimelineBtn');

      if (!currentTakes || currentTakes.length === 0) {
        takesEl.innerHTML = '<div class="no-clips">No takes detected</div>';
        applyBtn.style.display = 'none';
        labelBtn.style.display = 'none';
        return;
      }

      takesEl.innerHTML = currentTakes.map((take, i) => {
        const isBest = take.isBest ? ' best' : '';
        const star = take.isBest ? '★' : '☆';
        return `
          <div class="take-item${isBest}" data-index="${i}">
            <div class="take-header">
              <div class="take-label">Take ${take.takeNumber}</div>
              <span class="take-star">${star}</span>
            </div>
            <div class="take-time">${formatTime(take.start)} - ${formatTime(take.end)}</div>
            <div class="take-text">${take.description}</div>
          </div>
        `;
      }).join('');

      // Add click handlers to toggle best
      takesEl.querySelectorAll('.take-item').forEach(el => {
        el.addEventListener('click', () => {
          const index = parseInt(el.dataset.index);
          toggleBestTake(index);
        });
      });

      // Show buttons
      const hasBestTake = currentTakes.some(t => t.isBest);
      applyBtn.style.display = hasBestTake ? 'block' : 'none';
      labelBtn.style.display = 'block';
    }

    // Toggle best take selection
    function toggleBestTake(index) {
      if (!currentTakes || index < 0 || index >= currentTakes.length) return;

      // Toggle the selected take
      currentTakes[index].isBest = !currentTakes[index].isBest;

      // Re-render the takes list
      renderTakes();

      // Update status
      const bestCount = currentTakes.filter(t => t.isBest).length;
      document.getElementById('status').textContent =
        `${bestCount} take(s) marked as best`;
    }

    document.getElementById('analyzeBtn').addEventListener('click', async () => {
      const statusEl = document.getElementById('status');
      const btn = document.getElementById('analyzeBtn');
      const resultsSection = document.getElementById('resultsSection');
      const transcriptEl = document.getElementById('transcript');

      btn.disabled = true;
      statusEl.textContent = 'Analyzing audio...';
      resultsSection.style.display = 'none';

      try {
        const response = await fetch(`${BACKEND_URL}/analyze`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ wavPath: WAV_PATH })
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.error || `HTTP ${response.status}`);
        }

        const data = await response.json();

        if (!data.success) {
          throw new Error(data.error || 'Analysis failed');
        }

        // Display transcript
        transcriptEl.textContent = data.transcript.text || 'No transcript available';

        // Store takes and render
        if (data.takes && data.takes.takes && data.takes.takes.length > 0) {
          currentTakes = data.takes.takes;
        } else {
          currentTakes = null;
        }
        renderTakes();

        resultsSection.style.display = 'block';
        const takeCount = currentTakes ? currentTakes.length : 0;
        const bestCount = currentTakes ? currentTakes.filter(t => t.isBest).length : 0;
        statusEl.textContent = `Analysis complete: ${takeCount} take(s) found, ${bestCount} marked as best`;

      } catch (err) {
        statusEl.textContent = `Analysis error: ${err.message}`;
        console.error('SPLICE analysis error:', err);
      }

      btn.disabled = false;
    });

    function formatTime(seconds) {
      const mins = Math.floor(seconds / 60);
      const secs = Math.floor(seconds % 60);
      return `${mins}:${secs.toString().padStart(2, '0')}`;
    }

    // Label Clips on Timeline - razor at take boundaries and rename clips
    document.getElementById('labelTimelineBtn').addEventListener('click', async () => {
      const statusEl = document.getElementById('status');
      const btn = document.getElementById('labelTimelineBtn');

      if (!currentTakes || currentTakes.length === 0) {
        statusEl.textContent = 'No takes to label';
        return;
      }

      btn.disabled = true;
      statusEl.textContent = 'Labeling clips on timeline...';

      try {
        const project = await ppro.Project.getActiveProject();
        if (!project) {
          statusEl.textContent = 'No project open';
          btn.disabled = false;
          return;
        }

        const sequence = await project.getActiveSequence();
        if (!sequence) {
          statusEl.textContent = 'No active sequence';
          btn.disabled = false;
          return;
        }

        // Get sequence timebase (ticks per second)
        const ticksPerSecond = await sequence.getTicksPerSecond();

        // First, razor at all take boundaries
        for (const take of currentTakes) {
          const startTicks = Math.floor(take.start * ticksPerSecond);
          const endTicks = Math.floor(take.end * ticksPerSecond);

          await sequence.razorAllTracksAtTime(startTicks);
          await sequence.razorAllTracksAtTime(endTicks);
        }

        // Now find clips and rename them based on which take they fall into
        const videoTrackCount = await sequence.getVideoTrackCount();
        let labeledCount = 0;

        for (let i = 0; i < videoTrackCount; i++) {
          const track = await sequence.getVideoTrack(i);
          if (!track) continue;

          const clips = await track.getTrackItems(ppro.Constants.TrackItemType.CLIP, false);
          if (!clips) continue;

          for (let j = 0; j < clips.length; j++) {
            const clip = clips[j];
            if (!clip) continue;

            const clipStart = await clip.getStartTime();
            const clipStartSec = clipStart / ticksPerSecond;

            // Find which take this clip belongs to
            for (const take of currentTakes) {
              if (clipStartSec >= take.start && clipStartSec < take.end) {
                // Build label: "Take N - [first words]" with star if best
                const prefix = take.isBest ? '★ ' : '';
                const shortDesc = take.description.substring(0, 30);
                const label = `${prefix}Take ${take.takeNumber} - ${shortDesc}`;

                await clip.setName(label);
                labeledCount++;
                break;
              }
            }
          }
        }

        statusEl.textContent = `Labeled ${labeledCount} clip(s) on timeline`;

      } catch (err) {
        statusEl.textContent = `Label error: ${err.message}`;
        console.error('SPLICE label error:', err);
      }

      btn.disabled = false;
    });

    // Apply Takes - delete non-best takes from timeline
    document.getElementById('applyTakesBtn').addEventListener('click', async () => {
      const statusEl = document.getElementById('status');
      const btn = document.getElementById('applyTakesBtn');

      if (!currentTakes || currentTakes.length === 0) {
        statusEl.textContent = 'No takes to apply';
        return;
      }

      btn.disabled = true;
      statusEl.textContent = 'Applying takes to timeline...';

      try {
        const project = await ppro.Project.getActiveProject();
        if (!project) {
          statusEl.textContent = 'No project open';
          btn.disabled = false;
          return;
        }

        const sequence = await project.getActiveSequence();
        if (!sequence) {
          statusEl.textContent = 'No active sequence';
          btn.disabled = false;
          return;
        }

        // Get sequence timebase (ticks per second)
        const ticksPerSecond = await sequence.getTicksPerSecond();

        // Sort takes by start time (descending) - work from end to avoid time shifts
        const sortedTakes = [...currentTakes].sort((a, b) => b.start - a.start);

        let deletedCount = 0;

        for (const take of sortedTakes) {
          if (take.isBest) {
            continue; // Keep best takes
          }

          // Convert seconds to ticks
          const startTicks = Math.floor(take.start * ticksPerSecond);
          const endTicks = Math.floor(take.end * ticksPerSecond);

          // Razor all tracks at take boundaries
          await sequence.razorAllTracksAtTime(startTicks);
          await sequence.razorAllTracksAtTime(endTicks);

          // Find and remove clips within this range
          // Process both video and audio tracks
          const videoTrackCount = await sequence.getVideoTrackCount();
          const audioTrackCount = await sequence.getAudioTrackCount();

          // Process video tracks
          for (let i = 0; i < videoTrackCount; i++) {
            const track = await sequence.getVideoTrack(i);
            if (!track) continue;

            const clips = await track.getTrackItems(ppro.Constants.TrackItemType.CLIP, false);
            if (!clips) continue;

            for (let j = clips.length - 1; j >= 0; j--) {
              const clip = clips[j];
              if (!clip) continue;

              const clipStart = await clip.getStartTime();
              const clipEnd = await clip.getEndTime();

              // Check if clip is within the non-best take range
              if (clipStart >= startTicks && clipEnd <= endTicks) {
                await clip.remove();
                deletedCount++;
              }
            }
          }

          // Process audio tracks
          for (let i = 0; i < audioTrackCount; i++) {
            const track = await sequence.getAudioTrack(i);
            if (!track) continue;

            const clips = await track.getTrackItems(ppro.Constants.TrackItemType.CLIP, false);
            if (!clips) continue;

            for (let j = clips.length - 1; j >= 0; j--) {
              const clip = clips[j];
              if (!clip) continue;

              const clipStart = await clip.getStartTime();
              const clipEnd = await clip.getEndTime();

              // Check if clip is within the non-best take range
              if (clipStart >= startTicks && clipEnd <= endTicks) {
                await clip.remove();
                deletedCount++;
              }
            }
          }
        }

        const keptTakes = currentTakes.filter(t => t.isBest).length;
        statusEl.textContent = `Applied: kept ${keptTakes} best take(s), removed ${deletedCount} clip segment(s)`;

      } catch (err) {
        statusEl.textContent = `Apply error: ${err.message}`;
        console.error('SPLICE apply error:', err);
      }

      btn.disabled = false;
    });
  </script>
</body>
</html>
