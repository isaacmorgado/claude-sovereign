'use client';

import { motion } from 'framer-motion';
import { ChevronDown, TrendingDown, AlertTriangle, CheckCircle, Info, ExternalLink } from 'lucide-react';
import { Strength, Flaw, getScoreColor, getQualityColor, getSeverityColor } from '@/types/results';
import { QualityBadge, CategoryTag, ExpandableSection, SeverityBadge } from '../shared';
import { generateAIDescription, FlawDetail } from '@/lib/aiDescriptions';
import { useMemo } from 'react';

// ============================================
// SEVERITY BADGE - FaceIQ Style
// ============================================

type SeverityLevel = 'extremely_severe' | 'severe' | 'major' | 'moderate' | 'minor';

interface SeverityConfig {
  label: string;
  color: string;
  bgColor: string;
  borderColor: string;
}

const SEVERITY_CONFIGS: Record<SeverityLevel, SeverityConfig> = {
  extremely_severe: {
    label: 'Extremely Severe',
    color: '#dc2626',
    bgColor: 'rgba(220, 38, 38, 0.15)',
    borderColor: 'rgba(220, 38, 38, 0.4)',
  },
  severe: {
    label: 'Severe',
    color: '#ef4444',
    bgColor: 'rgba(239, 68, 68, 0.15)',
    borderColor: 'rgba(239, 68, 68, 0.4)',
  },
  major: {
    label: 'Major',
    color: '#f97316',
    bgColor: 'rgba(249, 115, 22, 0.15)',
    borderColor: 'rgba(249, 115, 22, 0.4)',
  },
  moderate: {
    label: 'Moderate',
    color: '#fbbf24',
    bgColor: 'rgba(251, 191, 36, 0.15)',
    borderColor: 'rgba(251, 191, 36, 0.4)',
  },
  minor: {
    label: 'Minor',
    color: '#6b7280',
    bgColor: 'rgba(107, 114, 128, 0.15)',
    borderColor: 'rgba(107, 114, 128, 0.4)',
  },
};

function getSeverityFromImpact(harmonyLost: number): SeverityLevel {
  if (harmonyLost >= 5) return 'extremely_severe';
  if (harmonyLost >= 3.5) return 'severe';
  if (harmonyLost >= 2.5) return 'major';
  if (harmonyLost >= 1.5) return 'moderate';
  return 'minor';
}

function getSeverityFromScore(score: number): SeverityLevel {
  if (score <= 2) return 'extremely_severe';
  if (score <= 4) return 'severe';
  if (score <= 5.5) return 'major';
  if (score <= 7) return 'moderate';
  return 'minor';
}

interface SeverityBadgeProps {
  severity: SeverityLevel;
  size?: 'sm' | 'md';
}

export function SeverityBadge({ severity, size = 'md' }: SeverityBadgeProps) {
  const config = SEVERITY_CONFIGS[severity];

  return (
    <span
      className={`inline-flex items-center font-medium rounded-full ${
        size === 'sm' ? 'px-2 py-0.5 text-[10px]' : 'px-2.5 py-1 text-xs'
      }`}
      style={{
        color: config.color,
        backgroundColor: config.bgColor,
        border: `1px solid ${config.borderColor}`,
      }}
    >
      {config.label}
    </span>
  );
}

// ============================================
// STRENGTH CARD
// ============================================

interface StrengthCardProps {
  strength: Strength;
  isExpanded?: boolean;
  onToggle?: () => void;
}

export function StrengthCard({ strength, isExpanded = false, onToggle }: StrengthCardProps) {
  const color = getQualityColor(strength.qualityLevel);

  return (
    <motion.div
      layout
      className={`bg-gradient-to-br from-green-500/10 to-cyan-500/5 border rounded-xl overflow-hidden transition-all ${
        isExpanded ? 'border-green-500/50' : 'border-green-500/20 hover:border-green-500/40'
      }`}
    >
      {/* Header */}
      <button
        onClick={onToggle}
        className="w-full p-4 flex items-start gap-3 text-left"
      >
        {/* Icon */}
        <div className="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center flex-shrink-0">
          <CheckCircle size={20} className="text-green-400" />
        </div>

        {/* Content */}
        <div className="flex-1 min-w-0">
          <div className="flex items-center gap-2 mb-1">
            <h3 className="font-semibold text-white">{strength.strengthName}</h3>
            <QualityBadge quality={strength.qualityLevel} size="sm" />
          </div>
          <p className="text-sm text-neutral-400 line-clamp-2">{strength.summary}</p>
          <div className="flex items-center gap-3 mt-2">
            <CategoryTag category={strength.categoryName} />
            <span className="text-sm font-medium" style={{ color }}>
              Score: {strength.avgScore.toFixed(1)}/10
            </span>
          </div>
        </div>

        {/* Expand indicator */}
        <motion.div
          animate={{ rotate: isExpanded ? 180 : 0 }}
          transition={{ duration: 0.2 }}
          className="flex-shrink-0 mt-1"
        >
          <ChevronDown size={18} className="text-neutral-500" />
        </motion.div>
      </button>

      {/* Expanded Content */}
      <ExpandableSection isExpanded={isExpanded}>
        <div className="px-4 pb-4 space-y-3 border-t border-green-500/20 pt-3">
          <h4 className="text-sm font-medium text-neutral-300">Responsible Ratios</h4>
          <div className="space-y-2">
            {strength.responsibleRatios.map((ratio, i) => (
              <div
                key={i}
                className="flex items-center justify-between p-2 bg-neutral-800/50 rounded-lg"
              >
                <span className="text-sm text-neutral-300">{ratio.ratioName}</span>
                <div className="flex items-center gap-2">
                  <span className="text-sm text-neutral-500">
                    {ratio.value.toFixed(2)}
                  </span>
                  <span
                    className="text-sm font-medium"
                    style={{ color: getScoreColor(ratio.score) }}
                  >
                    {ratio.score.toFixed(1)}
                  </span>
                </div>
              </div>
            ))}
          </div>
        </div>
      </ExpandableSection>
    </motion.div>
  );
}

// ============================================
// FLAW CARD
// ============================================

interface FlawCardProps {
  flaw: Flaw;
  isExpanded?: boolean;
  onToggle?: () => void;
  rank?: number;
}

export function FlawCard({ flaw, isExpanded = false, onToggle, rank }: FlawCardProps) {
  const severity = getSeverityFromImpact(flaw.harmonyPercentageLost);
  const severityConfig = SEVERITY_CONFIGS[severity];

  return (
    <motion.div
      layout
      className={`bg-gradient-to-br from-red-500/10 to-orange-500/5 border rounded-xl overflow-hidden transition-all ${
        isExpanded ? 'border-red-500/50' : 'border-red-500/20 hover:border-red-500/40'
      }`}
    >
      {/* Header */}
      <button
        onClick={onToggle}
        className="w-full p-4 flex items-start gap-3 text-left"
      >
        {/* Icon / Rank */}
        <div className="w-10 h-10 rounded-lg bg-red-500/20 flex items-center justify-center flex-shrink-0">
          {rank !== undefined ? (
            <span className="text-red-400 font-bold">#{rank}</span>
          ) : (
            <AlertTriangle size={20} className="text-red-400" />
          )}
        </div>

        {/* Content */}
        <div className="flex-1 min-w-0">
          <div className="flex items-center gap-2 mb-1 flex-wrap">
            <h3 className="font-semibold text-white">{flaw.flawName}</h3>
            <SeverityBadge severity={severity} size="sm" />
          </div>
          <p className="text-sm text-neutral-400 line-clamp-2">{flaw.summary}</p>
          <div className="flex items-center gap-3 mt-2 flex-wrap">
            <CategoryTag category={flaw.categoryName} />
            <div className="flex items-center gap-1">
              <TrendingDown size={14} style={{ color: severityConfig.color }} />
              <span className="text-sm font-medium" style={{ color: severityConfig.color }}>
                -{flaw.harmonyPercentageLost.toFixed(1)}%
              </span>
            </div>
          </div>
        </div>

        {/* Expand indicator */}
        <motion.div
          animate={{ rotate: isExpanded ? 180 : 0 }}
          transition={{ duration: 0.2 }}
          className="flex-shrink-0 mt-1"
        >
          <ChevronDown size={18} className="text-neutral-500" />
        </motion.div>
      </button>

      {/* Expanded Content */}
      <ExpandableSection isExpanded={isExpanded}>
        <div className="px-4 pb-4 space-y-3 border-t border-red-500/20 pt-3">
          {/* Impact metrics */}
          <div className="grid grid-cols-2 gap-3">
            <div className="bg-neutral-800/50 rounded-lg p-3">
              <p className="text-xs text-neutral-500 mb-1">Harmony Lost</p>
              <p className="text-lg font-bold" style={{ color: severityConfig.color }}>
                -{flaw.harmonyPercentageLost.toFixed(2)}%
              </p>
            </div>
            <div className="bg-neutral-800/50 rounded-lg p-3">
              <p className="text-xs text-neutral-500 mb-1">Impact Score</p>
              <p className="text-lg font-bold text-white">
                {flaw.standardizedImpact.toFixed(2)}
              </p>
            </div>
          </div>

          {/* Rolling impact if available */}
          {flaw.rollingHarmonyPercentageLost !== undefined && (
            <div className="bg-neutral-800/30 rounded-lg p-3">
              <p className="text-xs text-neutral-500 mb-1">Cumulative Impact</p>
              <div className="flex items-center gap-2">
                <div className="flex-1 h-2 bg-neutral-700 rounded-full overflow-hidden">
                  <div
                    className="h-full bg-red-500"
                    style={{ width: `${Math.min(flaw.rollingHarmonyPercentageLost, 100)}%` }}
                  />
                </div>
                <span className="text-sm text-red-400">
                  -{flaw.rollingHarmonyPercentageLost.toFixed(1)}%
                </span>
              </div>
            </div>
          )}

          {/* Responsible ratios */}
          <div>
            <h4 className="text-sm font-medium text-neutral-300 mb-2">Responsible Ratios</h4>
            <div className="space-y-2">
              {flaw.responsibleRatios.map((ratio, i) => (
                <div
                  key={i}
                  className="flex items-center justify-between p-2 bg-neutral-800/50 rounded-lg"
                >
                  <span className="text-sm text-neutral-300">{ratio.ratioName}</span>
                  <div className="flex items-center gap-2">
                    <span className="text-sm text-neutral-500">
                      {ratio.value.toFixed(2)}
                    </span>
                    <span
                      className="text-sm font-medium"
                      style={{ color: getScoreColor(ratio.score) }}
                    >
                      {ratio.score.toFixed(1)}
                    </span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </ExpandableSection>
    </motion.div>
  );
}

// ============================================
// COMPACT STRENGTH/FLAW BADGES
// ============================================

interface CompactStrengthBadgeProps {
  strength: Strength;
  onClick?: () => void;
}

export function CompactStrengthBadge({ strength, onClick }: CompactStrengthBadgeProps) {
  return (
    <button
      onClick={onClick}
      className="inline-flex items-center gap-1.5 px-2 py-1 bg-green-500/10 border border-green-500/20 rounded-lg hover:bg-green-500/20 transition-colors"
    >
      <CheckCircle size={12} className="text-green-400" />
      <span className="text-xs text-green-300">{strength.strengthName}</span>
    </button>
  );
}

interface CompactFlawBadgeProps {
  flaw: Flaw;
  onClick?: () => void;
  showSeverity?: boolean;
}

export function CompactFlawBadge({ flaw, onClick, showSeverity = true }: CompactFlawBadgeProps) {
  const severity = getSeverityFromImpact(flaw.harmonyPercentageLost);
  const config = SEVERITY_CONFIGS[severity];

  return (
    <button
      onClick={onClick}
      className="inline-flex items-center gap-1.5 px-2 py-1 rounded-lg hover:opacity-80 transition-all"
      style={{
        backgroundColor: config.bgColor,
        border: `1px solid ${config.borderColor}`,
      }}
    >
      <AlertTriangle size={12} style={{ color: config.color }} />
      <span className="text-xs" style={{ color: config.color }}>{flaw.flawName}</span>
      {showSeverity && (
        <span
          className="text-[10px] px-1.5 py-0.5 rounded-full"
          style={{
            backgroundColor: config.borderColor,
            color: config.color,
          }}
        >
          {config.label}
        </span>
      )}
    </button>
  );
}

// Export severity utilities for use in other components
export { getSeverityFromImpact, getSeverityFromScore, SEVERITY_CONFIGS };
export type { SeverityLevel };
