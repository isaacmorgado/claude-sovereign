"""
Email service using SendGrid
"""

from sendgrid import SendGridAPIClient
from sendgrid.helpers.mail import Mail, Email, To, Content
from app.config import get_settings


class EmailService:
    """SendGrid email service for transactional emails"""

    def __init__(self):
        self._client = None

    def _get_settings(self):
        """Get fresh settings each time (not cached at init)"""
        return get_settings()

    @property
    def api_key(self):
        return self._get_settings().sendgrid_api_key

    @property
    def from_email(self):
        return self._get_settings().sendgrid_from_email

    @property
    def from_name(self):
        return self._get_settings().sendgrid_from_name

    @property
    def frontend_url(self):
        return self._get_settings().frontend_url

    @property
    def client(self):
        if self._client is None and self.api_key:
            self._client = SendGridAPIClient(self.api_key)
        return self._client

    @property
    def is_configured(self) -> bool:
        return bool(self.api_key)

    async def send_password_reset_email(self, to_email: str, reset_token: str) -> bool:
        """
        Send password reset email with reset link.
        Returns True if sent successfully, False otherwise.
        """
        if not self.is_configured:
            print(f"[EMAIL] SendGrid not configured. Reset token for {to_email}: {reset_token}")
            return False

        reset_url = f"{self.frontend_url}/reset-password?token={reset_token}"

        html_content = f"""
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="margin: 0; padding: 0; background-color: #000000; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
    <table role="presentation" style="width: 100%; border-collapse: collapse;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" style="max-width: 480px; width: 100%; border-collapse: collapse;">
                    <!-- Logo -->
                    <tr>
                        <td align="center" style="padding-bottom: 32px;">
                            <div style="width: 48px; height: 48px; background-color: rgba(0, 243, 255, 0.2); border-radius: 8px; display: inline-flex; align-items: center; justify-content: center;">
                                <span style="color: #00f3ff; font-size: 24px; font-weight: bold;">L</span>
                            </div>
                        </td>
                    </tr>

                    <!-- Title -->
                    <tr>
                        <td align="center" style="padding-bottom: 16px;">
                            <h1 style="margin: 0; color: #ffffff; font-size: 24px; font-weight: 600;">
                                Reset Your Password
                            </h1>
                        </td>
                    </tr>

                    <!-- Message -->
                    <tr>
                        <td align="center" style="padding-bottom: 32px;">
                            <p style="margin: 0; color: #a3a3a3; font-size: 16px; line-height: 24px;">
                                We received a request to reset your password. Click the button below to create a new password. This link will expire in 1 hour.
                            </p>
                        </td>
                    </tr>

                    <!-- Button -->
                    <tr>
                        <td align="center" style="padding-bottom: 32px;">
                            <a href="{reset_url}"
                               style="display: inline-block; padding: 14px 32px; background-color: #00f3ff; color: #000000; text-decoration: none; font-size: 16px; font-weight: 600; border-radius: 8px;">
                                Reset Password
                            </a>
                        </td>
                    </tr>

                    <!-- Alternative Link -->
                    <tr>
                        <td align="center" style="padding-bottom: 32px;">
                            <p style="margin: 0; color: #737373; font-size: 14px; line-height: 20px;">
                                If the button doesn't work, copy and paste this link into your browser:
                            </p>
                            <p style="margin: 8px 0 0 0; word-break: break-all;">
                                <a href="{reset_url}" style="color: #00f3ff; font-size: 14px;">{reset_url}</a>
                            </p>
                        </td>
                    </tr>

                    <!-- Security Note -->
                    <tr>
                        <td align="center" style="padding: 24px; background-color: #171717; border-radius: 8px;">
                            <p style="margin: 0; color: #737373; font-size: 14px; line-height: 20px;">
                                If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged.
                            </p>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td align="center" style="padding-top: 32px;">
                            <p style="margin: 0; color: #525252; font-size: 12px;">
                                &copy; 2024 LOOKSMAXX. All rights reserved.
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
"""

        text_content = f"""
Reset Your Password

We received a request to reset your password. Click the link below to create a new password. This link will expire in 1 hour.

Reset Password: {reset_url}

If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged.

© 2024 LOOKSMAXX
"""

        try:
            message = Mail(
                from_email=Email(self.from_email, self.from_name),
                to_emails=To(to_email),
                subject="Reset Your LOOKSMAXX Password",
            )
            message.add_content(Content("text/plain", text_content))
            message.add_content(Content("text/html", html_content))

            response = self.client.send(message)

            if response.status_code in (200, 201, 202):
                print(f"[EMAIL] Password reset email sent to {to_email}")
                return True
            else:
                print(f"[EMAIL] Failed to send email: {response.status_code}")
                return False

        except Exception as e:
            print(f"[EMAIL] Error sending email: {e}")
            return False

    async def send_welcome_email(self, to_email: str, username: str) -> bool:
        """
        Send welcome email to new users.
        Returns True if sent successfully, False otherwise.
        """
        if not self.is_configured:
            print(f"[EMAIL] SendGrid not configured. Skipping welcome email for {to_email}")
            return False

        html_content = f"""
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="margin: 0; padding: 0; background-color: #000000; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
    <table role="presentation" style="width: 100%; border-collapse: collapse;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" style="max-width: 480px; width: 100%; border-collapse: collapse;">
                    <!-- Logo -->
                    <tr>
                        <td align="center" style="padding-bottom: 32px;">
                            <div style="width: 48px; height: 48px; background-color: rgba(0, 243, 255, 0.2); border-radius: 8px; display: inline-flex; align-items: center; justify-content: center;">
                                <span style="color: #00f3ff; font-size: 24px; font-weight: bold;">L</span>
                            </div>
                        </td>
                    </tr>

                    <!-- Title -->
                    <tr>
                        <td align="center" style="padding-bottom: 16px;">
                            <h1 style="margin: 0; color: #ffffff; font-size: 24px; font-weight: 600;">
                                Welcome to LOOKSMAXX, {username}!
                            </h1>
                        </td>
                    </tr>

                    <!-- Message -->
                    <tr>
                        <td align="center" style="padding-bottom: 32px;">
                            <p style="margin: 0; color: #a3a3a3; font-size: 16px; line-height: 24px;">
                                Your account has been created successfully. Start your facial analysis journey today.
                            </p>
                        </td>
                    </tr>

                    <!-- Button -->
                    <tr>
                        <td align="center" style="padding-bottom: 32px;">
                            <a href="{self.frontend_url}"
                               style="display: inline-block; padding: 14px 32px; background-color: #00f3ff; color: #000000; text-decoration: none; font-size: 16px; font-weight: 600; border-radius: 8px;">
                                Start Analysis
                            </a>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td align="center" style="padding-top: 32px;">
                            <p style="margin: 0; color: #525252; font-size: 12px;">
                                &copy; 2024 LOOKSMAXX. All rights reserved.
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
"""

        text_content = f"""
Welcome to LOOKSMAXX, {username}!

Your account has been created successfully. Start your facial analysis journey today.

Visit: {self.frontend_url}

© 2024 LOOKSMAXX
"""

        try:
            message = Mail(
                from_email=Email(self.from_email, self.from_name),
                to_emails=To(to_email),
                subject="Welcome to LOOKSMAXX!",
            )
            message.add_content(Content("text/plain", text_content))
            message.add_content(Content("text/html", html_content))

            response = self.client.send(message)

            if response.status_code in (200, 201, 202):
                print(f"[EMAIL] Welcome email sent to {to_email}")
                return True
            else:
                print(f"[EMAIL] Failed to send welcome email: {response.status_code}")
                return False

        except Exception as e:
            print(f"[EMAIL] Error sending welcome email: {e}")
            return False


# Singleton instance
email_service = EmailService()
