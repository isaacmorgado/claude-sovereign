/**
 * Front face measurement results
 */
export interface FrontFaceMeasurements {
  // Ratios
  fwhr: number;                    // Facial Width-to-Height Ratio
  facialIndex: number;             // Face height / Face width
  jawWidth: number;                // Bigonial width (pixels)
  cheekboneWidth: number;          // Bizygomatic width (pixels)

  // Thirds
  upperThird: number;              // Trichion to Glabella (%)
  middleThird: number;             // Glabella to Subnasale (%)
  lowerThird: number;              // Subnasale to Menton (%)

  // Fifths
  facialFifths: number[];          // 5 vertical sections (%)

  // Symmetry (0-100%)
  overallSymmetry: number;
  eyeSymmetry: number;
  browSymmetry: number;
  lipSymmetry: number;
  jawSymmetry: number;

  // Eye Measurements
  canthalTilt: number;             // Degrees
  interpupillaryDistance: number;  // Pixels
  palpebralFissureLength: number;  // Eye width
  intercanthalWidth: number;       // Between inner corners

  // Nose Measurements
  nasalWidth: number;
  nasalHeight: number;
  nasalIndex: number;              // Width / Height

  // Mouth Measurements
  lipRatio: number;                // Upper / Lower lip height
  mouthWidth: number;
  philtrumLength: number;

  // Golden Ratio Scores
  goldenRatioScores: GoldenRatioScores;
}

/**
 * Golden ratio scores for various facial proportions
 */
export interface GoldenRatioScores {
  faceHeightWidth: number;         // 0-100
  noseMouth: number;               // 0-100
  eyeSpacing: number;              // 0-100
  lipChin: number;                 // 0-100
  overall: number;                 // 0-100 weighted average
}

/**
 * Side profile measurement results
 */
export interface SideProfileMeasurements {
  // Angles (degrees)
  nasofrontalAngle: number;        // Forehead to nose bridge
  nasofacialAngle: number;         // Nose projection from face
  nasolabialAngle: number;         // Nose to upper lip (90-110 ideal)
  nasomentaAngle: number;          // Nose tip to chin
  mentocervicalAngle: number;      // Chin to neck
  gonialAngle: number;             // Jaw angle (120-130 ideal)

  // Profile Analysis
  profileType: ProfileType;
  facialConvexity: number;         // Glabella-Subnasale-Pogonion angle

  // Nose Profile
  nasalDorsumShape: NasalDorsumShape;
  nasalProjection: number;         // Goode ratio
  nasalTipRotation: number;        // Degrees
  columellaLobularRatio: number;

  // Lip Analysis
  lipProjection: number;           // mm from reference line
  upperLipAngle: number;           // Degrees
  lowerLipAngle: number;           // Degrees

  // Chin Analysis
  chinProjection: number;          // Relative to nose (mm)
  chinHeight: number;              // Pixels

  // Jaw Analysis
  mandibularPlaneAngle: number;    // Degrees
  ramalHeight: number;             // Pixels
}

/**
 * Profile type classification
 */
export type ProfileType = 'straight' | 'convex' | 'concave';

/**
 * Nasal dorsum shape classification
 */
export type NasalDorsumShape = 'straight' | 'convex' | 'concave';

/**
 * Combined measurements from both views
 */
export interface FullMeasurements {
  front: FrontFaceMeasurements | null;
  side: SideProfileMeasurements | null;
}

/**
 * Measurement with its raw value and associated metadata
 */
export interface MeasurementValue {
  value: number;
  unit: string;
  description: string;
}

/**
 * Range for ideal values
 */
export interface IdealRange {
  ideal: number;
  min: number;
  max: number;
}

/**
 * Gender-specific ideal values for a measurement
 */
export interface GenderSpecificIdeal {
  male: IdealRange;
  female: IdealRange;
}
