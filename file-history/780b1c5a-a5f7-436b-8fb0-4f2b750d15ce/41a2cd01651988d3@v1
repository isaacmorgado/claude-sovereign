/**
 * Basic 2D point coordinate
 */
export interface Point {
  x: number;
  y: number;
}

/**
 * Bounding box for face detection
 */
export interface BoundingBox {
  x: number;
  y: number;
  width: number;
  height: number;
}

/**
 * Crop information from face detection
 */
export interface CropInfo {
  x: number;
  y: number;
  width: number;
  height: number;
  scale: number;
}

/**
 * Side profile direction
 */
export type ProfileDirection = 'left' | 'right';

/**
 * Raw side profile landmark data from API
 */
export interface SideLandmarkData {
  landmarks: Point[];
  rotationAngle: number;
  direction: ProfileDirection;
  center: Point;
  crop: CropInfo;
  bbox: [number, number, number, number];
}

/**
 * Named side profile landmarks for easier access
 */
export interface NamedSideLandmarks {
  // Face Contour
  menton: Point;
  pogonion: Point;
  gnathion: Point;
  mandibleContour: Point[];

  // Posterior Points
  tragion: Point;
  earContour: Point[];

  // Forehead
  trichion: Point;

  // Nose Profile
  nasion: Point;
  pronasale: Point;
  subnasale: Point;
  columella: Point;
  noseBridge: Point[];
  noseTipContour: Point[];

  // Eye Region
  eyeLateralCanthus: Point;
  eyeMedialCanthus: Point;
  upperEyelid: Point[];
  lowerEyelid: Point[];
  pupil: Point;
  browHead: Point;
  browArch: Point;
  browTail: Point;

  // Lip Region
  labraleSuperius: Point;
  labraleInferius: Point;
  stomion: Point;
  upperLipContour: Point[];
  lowerLipContour: Point[];

  // Additional Profile Points
  glabella: Point;
  sellion: Point;
  softTissueNasion: Point;
  orbitale: Point;
  gonion: Point;
  condylion: Point;
}

/**
 * Named front face landmarks (MediaPipe 478 points)
 */
export interface NamedFrontLandmarks {
  // Nose
  noseTip: Point;
  noseBridge: Point;
  leftNostril: Point;
  rightNostril: Point;

  // Eyes
  leftEyeInner: Point;
  leftEyeOuter: Point;
  rightEyeInner: Point;
  rightEyeOuter: Point;
  leftPupil: Point;
  rightPupil: Point;

  // Eyebrows
  leftBrowInner: Point;
  leftBrowOuter: Point;
  rightBrowInner: Point;
  rightBrowOuter: Point;

  // Cheeks
  leftCheek: Point;
  rightCheek: Point;
  leftZygion: Point;
  rightZygion: Point;

  // Lips
  upperLip: Point;
  lowerLip: Point;
  mouthLeft: Point;
  mouthRight: Point;

  // Face Contour
  chin: Point;
  forehead: Point;
  leftTemple: Point;
  rightTemple: Point;
  leftJaw: Point;
  rightJaw: Point;
  leftGonion: Point;
  rightGonion: Point;

  // Additional
  glabella: Point;
  subnasale: Point;
}

/**
 * Gender type for gender-specific ideal values
 */
export type Gender = 'male' | 'female';

/**
 * Analyzer options
 */
export interface AnalyzerOptions {
  gender?: Gender;
  normalizeCoordinates?: boolean;
  imageWidth?: number;
  imageHeight?: number;
}
