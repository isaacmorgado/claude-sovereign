FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies for OpenCV and InsightFace
# build-essential provides gcc/g++ needed for native package compilation
RUN apt-get update && apt-get install -y \
    build-essential \
    ca-certificates \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies with verbose output
RUN pip install --no-cache-dir -r requirements.txt && \
    echo "=== Verifying InsightFace installation ===" && \
    python3 -c "import insightface; print(f'InsightFace version: {insightface.__version__}')" && \
    python3 -c "import onnxruntime; print(f'ONNX Runtime version: {onnxruntime.__version__}')" && \
    python3 -c "import cv2; print(f'OpenCV version: {cv2.__version__}')"

# Pre-download InsightFace models during build (cached in Docker layer)
# Using buffalo_s (30MB) instead of buffalo_l (190MB) for faster startup
ENV HOME=/root
RUN python3 -c "from insightface.app import FaceAnalysis; \
    fa = FaceAnalysis(name='buffalo_s', providers=['CPUExecutionProvider']); \
    fa.prepare(ctx_id=-1, det_size=(640, 640)); \
    print('Model pre-downloaded successfully')"

# Copy application code
COPY . .

# Copy and prepare start script
COPY start.sh /start.sh
RUN chmod +x /start.sh

# Expose port (Railway provides PORT env var)
EXPOSE 8000

# Run the application
CMD ["/start.sh"]
