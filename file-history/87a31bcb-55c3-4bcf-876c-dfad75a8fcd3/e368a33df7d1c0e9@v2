// Helper functions
export function getSourcesByCategory(category: SourceCategory): ScientificSource[] {
  return SCIENTIFIC_SOURCES.filter(s => s.category === category);
}

export function getSourceById(id: string): ScientificSource | undefined {
  return SCIENTIFIC_SOURCES.find(s => s.id === id);
}

export function getAllCategories(): SourceCategory[] {
  return Array.from(new Set(SCIENTIFIC_SOURCES.map(s => s.category)));
}

export function getTotalSourceCount(): number {
  return SCIENTIFIC_SOURCES.length;
}

export function getSourceCountByCategory(): Record<SourceCategory, number> {
  return SCIENTIFIC_SOURCES.reduce((acc, source) => {
    acc[source.category] = (acc[source.category] || 0) + 1;
    return acc;
  }, {} as Record<SourceCategory, number>);
}
