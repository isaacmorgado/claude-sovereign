/**
 * Scientific Sources for LOOXSMAXXLABS Methodology
 * 36 peer-reviewed studies backing our facial analysis approach
 */

export interface ScientificSource {
  id: string;
  title: string;
  authors: string;
  journal: string;
  year: number;
  link: string;
  category: SourceCategory;
  summary: string;
}

export type SourceCategory =
  | 'facial-proportions'
  | 'symmetry'
  | 'fwhr'
  | 'jaw-aesthetics'
  | 'eye-aesthetics'
  | 'nasal-aesthetics'
  | 'sexual-dimorphism'
  | 'averageness'
  | 'lip-aesthetics'
  | 'skincare'
  | 'supplements'
  | 'first-impressions';

