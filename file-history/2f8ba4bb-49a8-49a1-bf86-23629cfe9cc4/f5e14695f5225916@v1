import { Router } from 'express';
import * as usageController from '../controllers/usage-controller.js';
import { authenticate } from '../middleware/auth.js';

const router = Router();

// GET /usage - Get current usage stats
router.get('/', authenticate, usageController.getUsage);

// GET /usage/check?minutes=5 - Check if user can use requested minutes
router.get('/check', authenticate, usageController.checkLimit);

export default router;
