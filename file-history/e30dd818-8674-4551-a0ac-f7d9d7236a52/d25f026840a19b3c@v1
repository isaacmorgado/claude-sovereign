  <title>Landmark Mapper Tool</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #1a1a2e;
      color: #eee;
      min-height: 100vh;
    }
    .container {
      display: flex;
      height: 100vh;
    }
    .sidebar {
      width: 320px;
      background: #16213e;
      padding: 20px;
      overflow-y: auto;
      border-right: 1px solid #333;
    }
    .canvas-area {
      flex: 1;
      position: relative;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    h1 { font-size: 1.4em; margin-bottom: 15px; color: #4ecca3; }
    h2 { font-size: 1.1em; margin: 15px 0 10px; color: #7f8fa6; }

    .drop-zone {
      border: 2px dashed #4ecca3;
      border-radius: 10px;
      padding: 30px;
      text-align: center;
      cursor: pointer;
      margin-bottom: 20px;
      transition: all 0.3s;
    }
    .drop-zone:hover, .drop-zone.dragover {
      background: rgba(78, 204, 163, 0.1);
      border-color: #7f8fa6;
    }
    .drop-zone input { display: none; }

    .current-landmark {
      background: linear-gradient(135deg, #4ecca3, #38a169);
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 15px;
    }
    .current-landmark .label { font-size: 0.8em; opacity: 0.8; }
    .current-landmark .name { font-size: 1.3em; font-weight: bold; margin-top: 5px; }
    .current-landmark .index { font-size: 0.9em; opacity: 0.7; margin-top: 5px; }

    .nav-buttons {
      display: flex;
      gap: 10px;
      margin-bottom: 15px;
    }
    .nav-buttons button {
      flex: 1;
      padding: 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      transition: all 0.2s;
    }
    .btn-prev { background: #7f8fa6; color: #fff; }
    .btn-next { background: #4ecca3; color: #1a1a2e; }
    .btn-prev:hover { background: #9ba8b9; }
    .btn-next:hover { background: #38a169; }
    .btn-prev:disabled, .btn-next:disabled { opacity: 0.5; cursor: not-allowed; }

    .btn-export {
      width: 100%;
      padding: 12px;
      background: #e94560;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      margin-top: 10px;
    }
    .btn-export:hover { background: #c73e54; }

    .btn-clear {
      width: 100%;
      padding: 10px;
      background: transparent;
      color: #e94560;
      border: 1px solid #e94560;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 10px;
    }

    .landmark-list {
      max-height: 300px;
      overflow-y: auto;
      border: 1px solid #333;
      border-radius: 5px;
    }
    .landmark-item {
      padding: 8px 12px;
      border-bottom: 1px solid #333;
      font-size: 0.85em;
      display: flex;
      justify-content: space-between;
      cursor: pointer;
      transition: background 0.2s;
    }
    .landmark-item:hover { background: rgba(78, 204, 163, 0.1); }
    .landmark-item.current { background: rgba(78, 204, 163, 0.3); }
    .landmark-item.placed { color: #4ecca3; }
    .landmark-item .coords { color: #7f8fa6; font-family: monospace; }

    #canvas {
      max-width: 100%;
      max-height: 100%;
      cursor: crosshair;
    }

    .instructions {
      background: rgba(255,255,255,0.05);
      padding: 10px;
      border-radius: 5px;
      font-size: 0.85em;
      margin-bottom: 15px;
    }
    .instructions li { margin: 5px 0 5px 15px; }

    .progress {
      background: #333;
      border-radius: 5px;
      height: 8px;
      margin-bottom: 15px;
      overflow: hidden;
    }
    .progress-bar {
      height: 100%;
      background: linear-gradient(90deg, #4ecca3, #38a169);
      transition: width 0.3s;
    }

    .stats { font-size: 0.9em; color: #7f8fa6; margin-bottom: 10px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="sidebar">
      <h1>Landmark Mapper</h1>

      <div class="drop-zone" id="dropZone">
        <p>Drop image here or click to select</p>
        <input type="file" id="fileInput" accept="image/*">
      </div>

      <div class="instructions">
        <strong>Instructions:</strong>
        <ul>
          <li>Load a front-facing photo</li>
          <li>Click on the image to place each landmark</li>
          <li>Use Next/Prev or click list items</li>
          <li>Export JSON when done</li>
        </ul>
      </div>

      <div class="progress">
        <div class="progress-bar" id="progressBar" style="width: 0%"></div>
      </div>
      <div class="stats" id="stats">0 / 47 landmarks placed</div>

      <div class="current-landmark" id="currentLandmark">
        <div class="label">Current Landmark:</div>
        <div class="name" id="landmarkName">Load an image first</div>
        <div class="index" id="landmarkIndex"></div>
      </div>

      <div class="nav-buttons">
        <button class="btn-prev" id="btnPrev" disabled>Previous</button>
        <button class="btn-next" id="btnNext" disabled>Next</button>
      </div>

      <h2>All Landmarks</h2>
      <div class="landmark-list" id="landmarkList"></div>

      <button class="btn-export" id="btnExport">Export JSON</button>
      <button class="btn-clear" id="btnClear">Clear All Points</button>
    </div>

    <div class="canvas-area" id="canvasArea">
      <canvas id="canvas"></canvas>
    </div>
  </div>

  <script>
    // Front profile landmarks in order
    const LANDMARKS = [
      { id: 'trichion', label: 'Hairline', group: 'Head' },
      { id: 'left_pupila', label: 'Left Pupil', group: 'Left Eye' },
      { id: 'left_canthus_medialis', label: 'Left Inner Corner', group: 'Left Eye' },
      { id: 'left_canthus_lateralis', label: 'Left Outer Corner', group: 'Left Eye' },
      { id: 'left_palpebra_superior', label: 'Left Upper Eyelid', group: 'Left Eye' },
      { id: 'left_palpebra_inferior', label: 'Left Lower Eyelid', group: 'Left Eye' },
      { id: 'left_sulcus_palpebralis_lateralis', label: 'Left Crease Outer', group: 'Left Eye' },
      { id: 'left_pretarsal_skin_crease', label: 'Left Eyelid Crease', group: 'Left Eye' },
      { id: 'right_pupila', label: 'Right Pupil', group: 'Right Eye' },
      { id: 'right_canthus_medialis', label: 'Right Inner Corner', group: 'Right Eye' },
      { id: 'right_canthus_lateralis', label: 'Right Outer Corner', group: 'Right Eye' },
      { id: 'right_palpebra_superior', label: 'Right Upper Eyelid', group: 'Right Eye' },
      { id: 'right_palpebra_inferior', label: 'Right Lower Eyelid', group: 'Right Eye' },
      { id: 'right_sulcus_palpebralis_lateralis', label: 'Right Crease Outer', group: 'Right Eye' },
      { id: 'right_pretarsal_skin_crease', label: 'Right Eyelid Crease', group: 'Right Eye' },
      { id: 'left_supercilium_medialis', label: 'Left Brow Head', group: 'Left Brow' },
      { id: 'left_supercilium_medial_corner', label: 'Left Brow Inner', group: 'Left Brow' },
      { id: 'left_supercilium_superior', label: 'Left Brow Top', group: 'Left Brow' },
      { id: 'left_supercilium_apex', label: 'Left Brow Peak', group: 'Left Brow' },
      { id: 'left_supercilium_lateralis', label: 'Left Brow Tail', group: 'Left Brow' },
      { id: 'right_supercilium_medialis', label: 'Right Brow Head', group: 'Right Brow' },
      { id: 'right_supercilium_medial_corner', label: 'Right Brow Inner', group: 'Right Brow' },
      { id: 'right_supercilium_superior', label: 'Right Brow Top', group: 'Right Brow' },
      { id: 'right_supercilium_apex', label: 'Right Brow Peak', group: 'Right Brow' },
      { id: 'right_supercilium_lateralis', label: 'Right Brow Tail', group: 'Right Brow' },
      { id: 'nasal_base', label: 'Nasal Base', group: 'Nose' },
      { id: 'left_dorsum_nasi', label: 'Left Nose Bridge', group: 'Nose' },
      { id: 'right_dorsum_nasi', label: 'Right Nose Bridge', group: 'Nose' },
      { id: 'left_ala_nasi', label: 'Left Nostril', group: 'Nose' },
      { id: 'right_ala_nasi', label: 'Right Nostril', group: 'Nose' },
      { id: 'subnasale', label: 'Subnasale', group: 'Nose' },
      { id: 'labrale_superius', label: "Cupid's Bow", group: 'Mouth' },
      { id: 'cupids_bow', label: "Inner Cupid's Bow", group: 'Mouth' },
      { id: 'mouth_middle', label: 'Mouth Center', group: 'Mouth' },
      { id: 'labrale_inferius', label: 'Lower Lip Center', group: 'Mouth' },
      { id: 'left_cheilion', label: 'Left Mouth Corner', group: 'Mouth' },
      { id: 'right_cheilion', label: 'Right Mouth Corner', group: 'Mouth' },
      { id: 'left_gonion_superior', label: 'Left Upper Jaw', group: 'Jaw' },
      { id: 'right_gonion_superior', label: 'Right Upper Jaw', group: 'Jaw' },
      { id: 'left_gonion_inferior', label: 'Left Lower Jaw', group: 'Jaw' },
      { id: 'right_gonion_inferior', label: 'Right Lower Jaw', group: 'Jaw' },
      { id: 'left_mentum_lateralis', label: 'Left Chin Side', group: 'Chin' },
      { id: 'right_mentum_lateralis', label: 'Right Chin Side', group: 'Chin' },
      { id: 'menton', label: 'Chin Bottom', group: 'Chin' },
      { id: 'left_zygion', label: 'Left Cheekbone', group: 'Face Width' },
      { id: 'right_zygion', label: 'Right Cheekbone', group: 'Face Width' },
      { id: 'left_temporal', label: 'Left Temple', group: 'Face Width' },
      { id: 'right_temporal', label: 'Right Temple', group: 'Face Width' },
      { id: 'left_auricular_lateral', label: 'Left Ear', group: 'Face Width' },
      { id: 'right_auricular_lateral', label: 'Right Ear', group: 'Face Width' },
      { id: 'left_cervical_lateralis', label: 'Left Neck', group: 'Neck' },
      { id: 'right_cervical_lateralis', label: 'Right Neck', group: 'Neck' },
    ];

    // Group colors
    const GROUP_COLORS = {
      'Head': '#FFD700',
      'Left Eye': '#00BFFF',
      'Right Eye': '#00BFFF',
      'Left Brow': '#FF69B4',
      'Right Brow': '#FF69B4',
      'Nose': '#32CD32',
      'Mouth': '#DDA0DD',
      'Jaw': '#F39C12',
      'Chin': '#E74C3C',
      'Face Width': '#9B59B6',
      'Neck': '#1ABC9C',
    };

    let currentIndex = 0;
    let placedPoints = {};
    let image = null;
    let imageWidth = 0;
    let imageHeight = 0;

    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    const dropZone = document.getElementById('dropZone');
    const fileInput = document.getElementById('fileInput');
    const landmarkList = document.getElementById('landmarkList');
    const btnPrev = document.getElementById('btnPrev');
    const btnNext = document.getElementById('btnNext');
    const btnExport = document.getElementById('btnExport');
    const btnClear = document.getElementById('btnClear');

    // Initialize landmark list
    function renderLandmarkList() {
      landmarkList.innerHTML = LANDMARKS.map((lm, i) => {
        const placed = placedPoints[lm.id];
        const isCurrent = i === currentIndex;
        return `
          <div class="landmark-item ${isCurrent ? 'current' : ''} ${placed ? 'placed' : ''}"
               data-index="${i}">
            <span>${lm.label}</span>
            <span class="coords">${placed ? `(${placed.x.toFixed(3)}, ${placed.y.toFixed(3)})` : '---'}</span>
          </div>
        `;
      }).join('');

      // Add click handlers
      document.querySelectorAll('.landmark-item').forEach(item => {
        item.addEventListener('click', () => {
          currentIndex = parseInt(item.dataset.index);
          updateUI();
        });
      });
    }

    function updateUI() {
      const lm = LANDMARKS[currentIndex];
      document.getElementById('landmarkName').textContent = lm.label;
      document.getElementById('landmarkIndex').textContent = `ID: ${lm.id} | Group: ${lm.group}`;

      btnPrev.disabled = currentIndex === 0;
      btnNext.disabled = currentIndex === LANDMARKS.length - 1;

      const placedCount = Object.keys(placedPoints).length;
      document.getElementById('stats').textContent = `${placedCount} / ${LANDMARKS.length} landmarks placed`;
      document.getElementById('progressBar').style.width = `${(placedCount / LANDMARKS.length) * 100}%`;

      renderLandmarkList();
      redraw();
    }

    function redraw() {
      if (!image) return;

      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.drawImage(image, 0, 0);

      // Draw all placed points
      Object.entries(placedPoints).forEach(([id, point]) => {
        const lm = LANDMARKS.find(l => l.id === id);
        const color = GROUP_COLORS[lm?.group] || '#fff';
        const x = point.x * imageWidth;
        const y = point.y * imageHeight;

        // Draw point
        ctx.beginPath();
        ctx.arc(x, y, 6, 0, Math.PI * 2);
        ctx.fillStyle = color;
        ctx.fill();
        ctx.strokeStyle = '#000';
        ctx.lineWidth = 2;
        ctx.stroke();

        // Draw label
        ctx.font = '12px sans-serif';
        ctx.fillStyle = '#fff';
        ctx.strokeStyle = '#000';
        ctx.lineWidth = 3;
        ctx.strokeText(lm?.label || id, x + 10, y + 4);
        ctx.fillText(lm?.label || id, x + 10, y + 4);
      });

      // Highlight current landmark if placed
      const currentLm = LANDMARKS[currentIndex];
      if (placedPoints[currentLm.id]) {
        const point = placedPoints[currentLm.id];
        const x = point.x * imageWidth;
        const y = point.y * imageHeight;

        ctx.beginPath();
        ctx.arc(x, y, 12, 0, Math.PI * 2);
        ctx.strokeStyle = '#4ecca3';
        ctx.lineWidth = 3;
        ctx.stroke();
      }
    }

    function loadImage(file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        image = new Image();
        image.onload = () => {
          imageWidth = image.width;
          imageHeight = image.height;

          // Scale canvas to fit
          const maxWidth = document.getElementById('canvasArea').clientWidth - 40;
          const maxHeight = document.getElementById('canvasArea').clientHeight - 40;
          const scale = Math.min(maxWidth / imageWidth, maxHeight / imageHeight, 1);

          canvas.width = imageWidth * scale;
          canvas.height = imageHeight * scale;
          imageWidth = canvas.width;
          imageHeight = canvas.height;

          ctx.drawImage(image, 0, 0, imageWidth, imageHeight);

          btnPrev.disabled = false;
          btnNext.disabled = false;
          updateUI();
        };
        image.src = e.target.result;
      };
      reader.readAsDataURL(file);
    }

    // Event handlers
    dropZone.addEventListener('click', () => fileInput.click());
    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('dragover');
    });
    dropZone.addEventListener('dragleave', () => dropZone.classList.remove('dragover'));
    dropZone.addEventListener('drop', (e) => {
      e.preventDefault();
      dropZone.classList.remove('dragover');
      if (e.dataTransfer.files[0]) loadImage(e.dataTransfer.files[0]);
    });
    fileInput.addEventListener('change', (e) => {
      if (e.target.files[0]) loadImage(e.target.files[0]);
    });

    canvas.addEventListener('click', (e) => {
      if (!image) return;

      const rect = canvas.getBoundingClientRect();
      const x = (e.clientX - rect.left) / imageWidth;
      const y = (e.clientY - rect.top) / imageHeight;

      const lm = LANDMARKS[currentIndex];
      placedPoints[lm.id] = { x, y };

      // Auto-advance to next
      if (currentIndex < LANDMARKS.length - 1) {
        currentIndex++;
      }
      updateUI();
    });

    btnPrev.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        updateUI();
      }
    });

    btnNext.addEventListener('click', () => {
      if (currentIndex < LANDMARKS.length - 1) {
        currentIndex++;
        updateUI();
      }
    });

    btnClear.addEventListener('click', () => {
      if (confirm('Clear all placed points?')) {
        placedPoints = {};
        currentIndex = 0;
        updateUI();
      }
    });

    btnExport.addEventListener('click', () => {
      const data = {
        timestamp: new Date().toISOString(),
        totalLandmarks: LANDMARKS.length,
        placedCount: Object.keys(placedPoints).length,
        landmarks: LANDMARKS.map(lm => ({
          id: lm.id,
          label: lm.label,
          group: lm.group,
          coordinates: placedPoints[lm.id] || null
        }))
      };

      const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `landmark-mapping-${Date.now()}.json`;
      a.click();
      URL.revokeObjectURL(url);
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft' && currentIndex > 0) {
        currentIndex--;
        updateUI();
      } else if (e.key === 'ArrowRight' && currentIndex < LANDMARKS.length - 1) {
        currentIndex++;
        updateUI();
      }
    });

    // Initial render
    renderLandmarkList();
    updateUI();
  </script>
</body>
</html>
