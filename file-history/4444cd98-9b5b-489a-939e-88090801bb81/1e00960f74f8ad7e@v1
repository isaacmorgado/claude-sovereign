import { NextRequest, NextResponse } from "next/server";
import { cookies } from "next/headers";

// Backend API URL for authentication
const BACKEND_API_URL =
  process.env.BACKEND_API_URL || "https://splice-api-production.up.railway.app";

export async function GET(_request: NextRequest) {
  try {
    const cookieStore = await cookies();
    const token = cookieStore.get("splice_token")?.value;
    const refreshToken = cookieStore.get("splice_refresh_token")?.value;
    
    // Debug: Log all cookies available
    const allCookies = cookieStore.getAll();
    console.log("[Auth Me] Available cookies:", allCookies.map(c => c.name));
    console.log("[Auth Me] splice_token present:", !!token);
    console.log("[Auth Me] splice_auth_status:", cookieStore.get("splice_auth_status")?.value);

    // No token means not authenticated
    if (!token) {
      console.log("[Auth Me] No token found, returning 401");
      return NextResponse.json(
        {
          authenticated: false,
          error: "Not authenticated",
        },
        { status: 401 }
      );
    }

    // Verify the token with the backend by making a request to get balance/credits
    // This validates the token and returns current user data
    console.log("[Auth Me] Calling backend at:", `${BACKEND_API_URL}/credits`);
    const response = await fetch(`${BACKEND_API_URL}/credits`, {
      method: "GET",
      headers: {
        Authorization: `Bearer ${token}`,
      },
    });
    
    console.log("[Auth Me] Backend response status:", response.status);
    if (!response.ok) {
      const errorText = await response.text();
      console.log("[Auth Me] Backend error response:", errorText);
    }

    if (response.ok) {
      const data = await response.json();
      return NextResponse.json({
        authenticated: true,
        user: {
          customerId: data.customerId,
          tier: data.tier,
          hoursRemaining: data.hoursRemaining,
          musicCredits: data.musicCredits,
          variationsCredits: data.variationsCredits,
          sceneAwareCredits: data.sceneAwareCredits,
        },
      });
    }

    // Token might be expired, try to refresh
    if (response.status === 401 && refreshToken) {
      const refreshResponse = await fetch(`${BACKEND_API_URL}/auth/refresh`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ refreshToken }),
      });

      if (refreshResponse.ok) {
        const refreshData = await refreshResponse.json();

        // Get user data with the new token
        const balanceResponse = await fetch(`${BACKEND_API_URL}/credits`, {
          method: "GET",
          headers: {
            Authorization: `Bearer ${refreshData.token}`,
          },
        });

        if (balanceResponse.ok) {
          const balanceData = await balanceResponse.json();

          // Create response with updated user data
          const jsonResponse = NextResponse.json({
            authenticated: true,
            user: {
              customerId: balanceData.customerId,
              tier: balanceData.tier,
              hoursRemaining: balanceData.hoursRemaining,
              musicCredits: balanceData.musicCredits,
              variationsCredits: balanceData.variationsCredits,
              sceneAwareCredits: balanceData.sceneAwareCredits,
            },
          });

          // Update the access token cookie with the new token
          const isProduction = process.env.NODE_ENV === "production";
          jsonResponse.cookies.set("splice_token", refreshData.token, {
            httpOnly: true,
            secure: isProduction,
            sameSite: "strict",
            path: "/",
            maxAge: 60 * 60, // 1 hour
          });

          // Update auth status cookie
          jsonResponse.cookies.set("splice_auth_status", "authenticated", {
            httpOnly: false,
            secure: isProduction,
            sameSite: "strict",
            path: "/",
            maxAge: 60 * 60,
          });

          // Update user metadata cookie
          jsonResponse.cookies.set(
            "splice_user",
            JSON.stringify({
              customerId: balanceData.customerId,
              tier: balanceData.tier,
              hoursRemaining: balanceData.hoursRemaining,
            }),
            {
              httpOnly: false,
              secure: isProduction,
              sameSite: "strict",
              path: "/",
              maxAge: 60 * 60,
            }
          );

          return jsonResponse;
        }
      }
    }

    // Token invalid and couldn't refresh
    const errorResponse = NextResponse.json(
      {
        authenticated: false,
        error: "Session expired",
        message: "Please log in again",
      },
      { status: 401 }
    );

    // Clear invalid cookies
    const isProduction = process.env.NODE_ENV === "production";
    errorResponse.cookies.set("splice_token", "", {
      httpOnly: true,
      secure: isProduction,
      sameSite: "strict",
      path: "/",
      maxAge: 0,
    });
    errorResponse.cookies.set("splice_auth_status", "", {
      httpOnly: false,
      secure: isProduction,
      sameSite: "strict",
      path: "/",
      maxAge: 0,
    });
    errorResponse.cookies.set("splice_user", "", {
      httpOnly: false,
      secure: isProduction,
      sameSite: "strict",
      path: "/",
      maxAge: 0,
    });

    return errorResponse;
  } catch (error) {
    console.error("[Auth] Me endpoint error:", error);
    return NextResponse.json(
      {
        authenticated: false,
        error: "Authentication check failed",
      },
      { status: 500 }
    );
  }
}
