'use client';

import { useEffect, useState } from 'react';
import { AlertCircle, TrendingUp, Infinity, Clock } from 'lucide-react';
import { ForumQuota } from '@/types/forum';
import { api } from '@/lib/api';
import Link from 'next/link';

interface QuotaIndicatorProps {
  type: 'posts' | 'comments';
  className?: string;
  compact?: boolean;
  onQuotaExceeded?: () => void;
}

export function QuotaIndicator({
  type,
  className = '',
  compact = false,
  onQuotaExceeded,
}: QuotaIndicatorProps) {
  const [quota, setQuota] = useState<ForumQuota | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    const fetchQuota = async () => {
      try {
        const data = await api.getForumQuota();
        setQuota(data);

        // Check if quota is exceeded
        if (type === 'posts' && data.postsMax !== null && data.postsUsed >= data.postsMax) {
          onQuotaExceeded?.();
        } else if (type === 'comments' && data.commentsMax !== null && data.commentsUsed >= data.commentsMax) {
          onQuotaExceeded?.();
        }
      } catch (err) {
        setError(err instanceof Error ? err.message : 'Failed to load quota');
      } finally {
        setLoading(false);
      }
    };

    fetchQuota();
  }, [type, onQuotaExceeded]);

  if (loading) {
    if (compact) return null;
    return (
      <div className={`animate-pulse bg-neutral-800/50 rounded-lg h-8 w-32 ${className}`} />
    );
  }

  if (error || !quota) {
    return null; // Fail silently
  }

  const used = type === 'posts' ? quota.postsUsed : quota.commentsUsed;
  const max = type === 'posts' ? quota.postsMax : quota.commentsMax;
  const isUnlimited = max === null;
  const remaining = isUnlimited ? Infinity : max - used;
  const percentage = isUnlimited ? 0 : Math.min((used / max) * 100, 100);
  const isExceeded = !isUnlimited && used >= max;
  const isNearLimit = !isUnlimited && percentage >= 80;

  // Format reset date - use state to avoid hydration mismatch
  const [daysUntilReset, setDaysUntilReset] = useState<number | null>(null);

  useEffect(() => {
    if (quota?.resetsAt) {
      const resetDate = new Date(quota.resetsAt);
      setDaysUntilReset(Math.ceil((resetDate.getTime() - Date.now()) / (1000 * 60 * 60 * 24)));
    }
  }, [quota?.resetsAt]);

  if (compact) {
    if (isUnlimited) {
      return (
        <span className={`text-[10px] font-medium text-neutral-500 ${className}`}>
          <Infinity size={12} className="inline mr-1" />
          Unlimited
        </span>
      );
    }

    if (isExceeded) {
      return (
        <span className={`text-[10px] font-medium text-red-400 ${className}`}>
          <AlertCircle size={12} className="inline mr-1" />
          Quota exceeded
        </span>
      );
    }

    return (
      <span className={`text-[10px] font-medium ${isNearLimit ? 'text-amber-400' : 'text-neutral-500'} ${className}`}>
        {remaining === Infinity ? 'Unlimited' : `${remaining} ${type} left`}
      </span>
    );
  }

  return (
    <div className={`rounded-xl border p-4 ${
      isExceeded
        ? 'bg-red-500/5 border-red-500/20'
        : isNearLimit
        ? 'bg-amber-500/5 border-amber-500/20'
        : 'bg-neutral-900/50 border-white/5'
    } ${className}`}>
      <div className="flex items-center justify-between mb-3">
        <div className="flex items-center gap-2">
          <span className="text-[10px] font-black uppercase tracking-widest text-neutral-400">
            {type === 'posts' ? 'Post' : 'Comment'} Quota
          </span>
          {isUnlimited && (
            <span className="flex items-center gap-1 px-2 py-0.5 rounded-full bg-cyan-500/10 text-cyan-400 text-[9px] font-bold uppercase">
              <Infinity size={10} />
              Unlimited
            </span>
          )}
        </div>
        <div className="flex items-center gap-1 text-[10px] text-neutral-600">
          <Clock size={10} />
          {daysUntilReset !== null ? `Resets in ${daysUntilReset}d` : 'Loading...'}
        </div>
      </div>

      {!isUnlimited && (
        <>
          {/* Progress bar */}
          <div className="h-2 bg-neutral-800 rounded-full overflow-hidden mb-2">
            <div
              className={`h-full transition-all duration-500 rounded-full ${
                isExceeded
                  ? 'bg-red-500'
                  : isNearLimit
                  ? 'bg-amber-500'
                  : 'bg-cyan-500'
              }`}
              style={{ width: `${percentage}%` }}
            />
          </div>

          {/* Stats */}
          <div className="flex items-center justify-between">
            <span className={`text-sm font-bold ${
              isExceeded ? 'text-red-400' : isNearLimit ? 'text-amber-400' : 'text-white'
            }`}>
              {used} / {max}
            </span>
            <span className={`text-[10px] font-medium ${
              isExceeded ? 'text-red-400' : isNearLimit ? 'text-amber-400' : 'text-neutral-500'
            }`}>
              {isExceeded ? 'Limit reached' : `${remaining} remaining`}
            </span>
          </div>
        </>
      )}

      {/* Upgrade CTA when near limit or exceeded */}
      {(isExceeded || isNearLimit) && !isUnlimited && (
        <Link
          href="/pricing"
          className={`mt-3 flex items-center justify-center gap-2 w-full py-2 rounded-lg text-[10px] font-black uppercase tracking-widest transition-all ${
            isExceeded
              ? 'bg-red-500/10 text-red-400 hover:bg-red-500/20'
              : 'bg-amber-500/10 text-amber-400 hover:bg-amber-500/20'
          }`}
        >
          <TrendingUp size={12} />
          Upgrade for more {type}
        </Link>
      )}
    </div>
  );
}

// Alert banner for when quota is exceeded
interface QuotaExceededBannerProps {
  type: 'posts' | 'comments';
  className?: string;
}

export function QuotaExceededBanner({ type, className = '' }: QuotaExceededBannerProps) {
  return (
    <div className={`flex items-center gap-3 p-4 rounded-xl bg-red-500/10 border border-red-500/20 ${className}`}>
      <AlertCircle className="text-red-400 flex-shrink-0" size={20} />
      <div className="flex-1 min-w-0">
        <p className="text-sm font-medium text-red-400">
          Monthly {type} quota exceeded
        </p>
        <p className="text-xs text-red-400/70 mt-0.5">
          Upgrade your plan to continue posting or wait until your quota resets.
        </p>
      </div>
      <Link
        href="/pricing"
        className="flex-shrink-0 px-4 py-2 bg-red-500 text-white text-[10px] font-black uppercase tracking-widest rounded-lg hover:bg-red-400 transition-colors"
      >
        Upgrade
      </Link>
    </div>
  );
}
