"use client";

import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { motion } from "framer-motion";
import { Gift, Users, Clock, ArrowRight, Copy, Check } from "lucide-react";
import { useState } from "react";

export function ReferralPromo() {
  const [copied, setCopied] = useState(false);
  const referralCode = "SPLICE-XXXXXX"; // Placeholder - real code comes from user account

  const handleCopyCode = () => {
    navigator.clipboard.writeText("https://splice.video?ref=" + referralCode);
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
  };

  return (
    <section className="py-16 bg-gradient-to-b from-[#0a0f1a] to-[#060b14] dark">
      <div className="container mx-auto px-4">
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          whileInView={{ opacity: 1, y: 0 }}
          viewport={{ once: true }}
          transition={{ duration: 0.5 }}
        >
          <Card className="bg-gradient-to-br from-[#0d1829] to-[#1a2744] border-[#00D4FF]/20 overflow-hidden">
            <CardContent className="p-0">
              <div className="grid md:grid-cols-2 gap-8 items-center">
                {/* Left side - Content */}
                <div className="p-8 md:p-12">
                  <Badge className="mb-4 bg-[#00D4FF]/10 text-[#00D4FF] border-[#00D4FF]/30">
                    <Gift className="w-3.5 h-3.5 mr-1.5" />
                    Referral Program
                  </Badge>

                  <h3 className="text-2xl md:text-3xl font-bold text-white mb-4">
                    Share SPLICE, Get Free Hours
                  </h3>

                  <p className="text-gray-300 mb-6">
                    Love SPLICE? Share it with your creator friends and earn free processing hours for every successful referral.
                  </p>

                  {/* Benefits */}
                  <div className="space-y-4 mb-8">
                    <div className="flex items-start gap-3">
                      <div className="w-10 h-10 rounded-lg bg-[#00D4FF]/10 flex items-center justify-center shrink-0">
                        <Users className="w-5 h-5 text-[#00D4FF]" />
                      </div>
                      <div>
                        <div className="font-semibold text-white">Your friends get 10% off</div>
                        <div className="text-sm text-gray-400">First month discount on any plan</div>
                      </div>
                    </div>

                    <div className="flex items-start gap-3">
                      <div className="w-10 h-10 rounded-lg bg-green-500/10 flex items-center justify-center shrink-0">
                        <Clock className="w-5 h-5 text-green-400" />
                      </div>
                      <div>
                        <div className="font-semibold text-white">You get 1 free hour</div>
                        <div className="text-sm text-gray-400">Added to your account when they subscribe</div>
                      </div>
                    </div>
                  </div>

                  {/* CTA */}
                  <div className="flex flex-col sm:flex-row gap-3">
                    <Button
                      className="bg-[#00D4FF] hover:bg-[#00B8E6] text-black font-semibold"
                      onClick={handleCopyCode}
                    >
                      {copied ? (
                        <>
                          <Check className="w-4 h-4 mr-2" />
                          Link Copied!
                        </>
                      ) : (
                        <>
                          <Copy className="w-4 h-4 mr-2" />
                          Copy Referral Link
                        </>
                      )}
                    </Button>
                    <Button
                      variant="outline"
                      className="border-gray-700 text-gray-300 hover:bg-white/5"
                    >
                      Learn More
                      <ArrowRight className="w-4 h-4 ml-2" />
                    </Button>
                  </div>
                </div>

                {/* Right side - Visual */}
                <div className="hidden md:block relative h-full min-h-[300px]">
                  <div className="absolute inset-0 bg-gradient-to-br from-[#00D4FF]/20 to-purple-500/20" />
                  <div className="absolute inset-0 flex items-center justify-center">
                    <div className="text-center">
                      <div className="text-6xl font-bold text-white mb-2">
                        <span className="text-[#00D4FF]">1</span> hr
                      </div>
                      <div className="text-gray-400">per referral</div>
                      <div className="mt-4 text-sm text-gray-500">
                        No limit on earnings
                      </div>
                    </div>
                  </div>

                  {/* Decorative elements */}
                  <motion.div
                    className="absolute top-8 right-8 w-16 h-16 rounded-full bg-[#00D4FF]/20 blur-xl"
                    animate={{ scale: [1, 1.2, 1], opacity: [0.5, 0.8, 0.5] }}
                    transition={{ duration: 3, repeat: Infinity }}
                  />
                  <motion.div
                    className="absolute bottom-8 left-8 w-24 h-24 rounded-full bg-purple-500/20 blur-xl"
                    animate={{ scale: [1.2, 1, 1.2], opacity: [0.5, 0.8, 0.5] }}
                    transition={{ duration: 3, repeat: Infinity, delay: 1 }}
                  />
                </div>
              </div>
            </CardContent>
          </Card>
        </motion.div>
      </div>
    </section>
  );
}
