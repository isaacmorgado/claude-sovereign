      { id: 'right_pretarsal_skin_crease', label: 'Right Eyelid Crease', group: 'Right Eye' },
      { id: 'left_supercilium_medialis', label: 'Left Brow Head', group: 'Left Brow' },
      { id: 'left_supercilium_medial_corner', label: 'Left Brow Inner', group: 'Left Brow' },
      { id: 'left_supercilium_superior', label: 'Left Brow Top', group: 'Left Brow' },
      { id: 'left_supercilium_apex', label: 'Left Brow Peak', group: 'Left Brow' },
      { id: 'left_supercilium_lateralis', label: 'Left Brow Tail', group: 'Left Brow' },
      { id: 'right_supercilium_medialis', label: 'Right Brow Head', group: 'Right Brow' },
      { id: 'right_supercilium_medial_corner', label: 'Right Brow Inner', group: 'Right Brow' },
      { id: 'right_supercilium_superior', label: 'Right Brow Top', group: 'Right Brow' },
      { id: 'right_supercilium_apex', label: 'Right Brow Peak', group: 'Right Brow' },
      { id: 'right_supercilium_lateralis', label: 'Right Brow Tail', group: 'Right Brow' },
      { id: 'nasal_base', label: 'Nasal Base', group: 'Nose' },
      { id: 'left_dorsum_nasi', label: 'Left Nose Bridge', group: 'Nose' },
      { id: 'right_dorsum_nasi', label: 'Right Nose Bridge', group: 'Nose' },
      { id: 'left_ala_nasi', label: 'Left Nostril', group: 'Nose' },
      { id: 'right_ala_nasi', label: 'Right Nostril', group: 'Nose' },
      { id: 'subnasale', label: 'Subnasale', group: 'Nose' },
      { id: 'labrale_superius', label: "Cupid's Bow", group: 'Mouth' },
      { id: 'cupids_bow', label: "Inner Cupid's Bow", group: 'Mouth' },
      { id: 'mouth_middle', label: 'Mouth Center', group: 'Mouth' },
      { id: 'labrale_inferius', label: 'Lower Lip Center', group: 'Mouth' },
      { id: 'left_cheilion', label: 'Left Mouth Corner', group: 'Mouth' },
      { id: 'right_cheilion', label: 'Right Mouth Corner', group: 'Mouth' },
      { id: 'left_gonion_superior', label: 'Left Upper Jaw', group: 'Jaw' },
      { id: 'right_gonion_superior', label: 'Right Upper Jaw', group: 'Jaw' },
      { id: 'left_gonion_inferior', label: 'Left Lower Jaw', group: 'Jaw' },
      { id: 'right_gonion_inferior', label: 'Right Lower Jaw', group: 'Jaw' },
      { id: 'left_mentum_lateralis', label: 'Left Chin Side', group: 'Chin' },
      { id: 'right_mentum_lateralis', label: 'Right Chin Side', group: 'Chin' },
      { id: 'menton', label: 'Chin Bottom', group: 'Chin' },
      { id: 'left_zygion', label: 'Left Cheekbone', group: 'Face Width' },
      { id: 'right_zygion', label: 'Right Cheekbone', group: 'Face Width' },
      { id: 'left_temporal', label: 'Left Temple', group: 'Face Width' },
      { id: 'right_temporal', label: 'Right Temple', group: 'Face Width' },
      { id: 'left_auricular_lateral', label: 'Left Ear', group: 'Face Width' },
      { id: 'right_auricular_lateral', label: 'Right Ear', group: 'Face Width' },
      { id: 'left_cervical_lateralis', label: 'Left Neck', group: 'Neck' },
      { id: 'right_cervical_lateralis', label: 'Right Neck', group: 'Neck' },
    ];

    // Side profile landmarks (31 points)
    const SIDE_LANDMARKS = [
      { id: 'side_trichion', label: 'Hairline', group: 'Head' },
      { id: 'side_glabella', label: 'Glabella', group: 'Head' },
      { id: 'side_nasion', label: 'Nasion', group: 'Head' },
      { id: 'side_sellion', label: 'Sellion', group: 'Nose' },
      { id: 'side_rhinion', label: 'Rhinion', group: 'Nose' },
      { id: 'side_supratip', label: 'Supratip', group: 'Nose' },
      { id: 'side_pronasale', label: 'Nose Tip', group: 'Nose' },
      { id: 'side_columella', label: 'Columella', group: 'Nose' },
      { id: 'side_subnasale', label: 'Subnasale', group: 'Nose' },
      { id: 'side_ala_nasi', label: 'Nostril', group: 'Nose' },
      { id: 'side_labrale_superius', label: 'Upper Lip', group: 'Mouth' },
      { id: 'side_stomion', label: 'Lip Junction', group: 'Mouth' },
      { id: 'side_labrale_inferius', label: 'Lower Lip', group: 'Mouth' },
      { id: 'side_labiomental_sulcus', label: 'Labiomental Sulcus', group: 'Chin' },
      { id: 'side_pogonion', label: 'Pogonion', group: 'Chin' },
      { id: 'side_gnathion', label: 'Gnathion', group: 'Chin' },
      { id: 'side_menton', label: 'Menton', group: 'Chin' },
      { id: 'side_cervical_point', label: 'Cervical Point', group: 'Neck' },
      { id: 'side_throat_point', label: 'Throat Point', group: 'Neck' },
      { id: 'side_pupil', label: 'Pupil', group: 'Eye' },
      { id: 'side_canthus_lateralis', label: 'Outer Eye Corner', group: 'Eye' },
      { id: 'side_upper_eyelid', label: 'Upper Eyelid', group: 'Eye' },
      { id: 'side_lower_eyelid', label: 'Lower Eyelid', group: 'Eye' },
      { id: 'side_brow_head', label: 'Brow Head', group: 'Brow' },
      { id: 'side_brow_peak', label: 'Brow Peak', group: 'Brow' },
      { id: 'side_brow_tail', label: 'Brow Tail', group: 'Brow' },
      { id: 'side_tragus', label: 'Tragus', group: 'Ear' },
      { id: 'side_ear_top', label: 'Ear Top', group: 'Ear' },
      { id: 'side_ear_bottom', label: 'Ear Bottom', group: 'Ear' },
      { id: 'side_gonion', label: 'Gonion', group: 'Jaw' },
      { id: 'side_ramus', label: 'Ramus', group: 'Jaw' },
    ];

    // Current phase: 'front' or 'side'
    let currentPhase = 'front';

    // Get current landmarks based on phase
    function getCurrentLandmarks() {
      return currentPhase === 'front' ? FRONT_LANDMARKS : SIDE_LANDMARKS;
    }

    // Group colors
    const GROUP_COLORS = {
      'Head': '#FFD700',
      'Left Eye': '#00BFFF',
      'Right Eye': '#00BFFF',
      'Eye': '#00BFFF',
      'Left Brow': '#FF69B4',
      'Right Brow': '#FF69B4',
      'Brow': '#FF69B4',
      'Nose': '#32CD32',
      'Mouth': '#DDA0DD',
      'Jaw': '#F39C12',
      'Chin': '#E74C3C',
      'Face Width': '#9B59B6',
      'Neck': '#1ABC9C',
      'Ear': '#3498DB',
    };

    let currentIndex = 0;
    let frontPlacedPoints = {};
    let sidePlacedPoints = {};
    let image = null;
    let imageWidth = 0;
    let imageHeight = 0;
    let frontCompletionShown = false;

    // Get placed points for current phase
    function getPlacedPoints() {
      return currentPhase === 'front' ? frontPlacedPoints : sidePlacedPoints;
    }

    // Set placed point for current phase
    function setPlacedPoint(id, coords) {
      if (currentPhase === 'front') {
        frontPlacedPoints[id] = coords;
      } else {
        sidePlacedPoints[id] = coords;
      }
    }

    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    const dropZone = document.getElementById('dropZone');
    const fileInput = document.getElementById('fileInput');
    const landmarkList = document.getElementById('landmarkList');
    const btnPrev = document.getElementById('btnPrev');
    const btnNext = document.getElementById('btnNext');
    const btnExport = document.getElementById('btnExport');
    const btnClear = document.getElementById('btnClear');
    const completionModal = document.getElementById('completionModal');
    const btnStay = document.getElementById('btnStay');
    const btnContinue = document.getElementById('btnContinue');
    const phaseIndicator = document.getElementById('phaseIndicator');

    // Initialize landmark list
    function renderLandmarkList() {
      const landmarks = getCurrentLandmarks();
      const placedPoints = getPlacedPoints();
      landmarkList.innerHTML = landmarks.map((lm, i) => {
        const placed = placedPoints[lm.id];
        const isCurrent = i === currentIndex;
        return `
          <div class="landmark-item ${isCurrent ? 'current' : ''} ${placed ? 'placed' : ''}"
               data-index="${i}">
            <span>${lm.label}</span>
            <span class="coords">${placed ? `(${placed.x.toFixed(3)}, ${placed.y.toFixed(3)})` : '---'}</span>
          </div>
        `;
      }).join('');

      // Add click handlers
      document.querySelectorAll('.landmark-item').forEach(item => {
        item.addEventListener('click', () => {
          currentIndex = parseInt(item.dataset.index);
          updateUI();
        });
      });
    }

    function updateUI() {
      const landmarks = getCurrentLandmarks();
      const placedPoints = getPlacedPoints();
      const lm = landmarks[currentIndex];

      document.getElementById('landmarkName').textContent = lm.label;
      document.getElementById('landmarkIndex').textContent = `Step ${currentIndex + 1} of ${landmarks.length} | ${lm.group}`;

      btnPrev.disabled = currentIndex === 0;
      btnNext.disabled = currentIndex === landmarks.length - 1;

      const placedCount = Object.keys(placedPoints).length;
      document.getElementById('stats').textContent = `${placedCount} / ${landmarks.length} landmarks placed`;
      document.getElementById('progressBar').style.width = `${(placedCount / landmarks.length) * 100}%`;

      // Update phase indicator
      if (currentPhase === 'front') {
        phaseIndicator.textContent = 'Phase 1: Front Face';
        phaseIndicator.className = 'phase-indicator front';
      } else {
        phaseIndicator.textContent = 'Phase 2: Side Profile';
        phaseIndicator.className = 'phase-indicator side';
      }

      renderLandmarkList();
      redraw();
    }

    function redraw() {
      if (!image) return;

      const landmarks = getCurrentLandmarks();
      const placedPoints = getPlacedPoints();

      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.drawImage(image, 0, 0);

      // Draw all placed points
      Object.entries(placedPoints).forEach(([id, point]) => {
        const lm = landmarks.find(l => l.id === id);
        const color = GROUP_COLORS[lm?.group] || '#fff';
        const x = point.x * imageWidth;
        const y = point.y * imageHeight;

        // Draw point
        ctx.beginPath();
        ctx.arc(x, y, 6, 0, Math.PI * 2);
        ctx.fillStyle = color;
        ctx.fill();
        ctx.strokeStyle = '#000';
        ctx.lineWidth = 2;
        ctx.stroke();

        // Draw label
        ctx.font = '12px sans-serif';
        ctx.fillStyle = '#fff';
        ctx.strokeStyle = '#000';
        ctx.lineWidth = 3;
        ctx.strokeText(lm?.label || id, x + 10, y + 4);
        ctx.fillText(lm?.label || id, x + 10, y + 4);
      });

      // Highlight current landmark if placed
      const currentLm = landmarks[currentIndex];
      if (placedPoints[currentLm.id]) {
        const point = placedPoints[currentLm.id];
        const x = point.x * imageWidth;
        const y = point.y * imageHeight;

        ctx.beginPath();
        ctx.arc(x, y, 12, 0, Math.PI * 2);
        ctx.strokeStyle = '#4ecca3';
        ctx.lineWidth = 3;
        ctx.stroke();
      }
    }

    function loadImage(file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        image = new Image();
        image.onload = () => {
          imageWidth = image.width;
          imageHeight = image.height;

          // Scale canvas to fit
          const maxWidth = document.getElementById('canvasArea').clientWidth - 40;
          const maxHeight = document.getElementById('canvasArea').clientHeight - 40;
          const scale = Math.min(maxWidth / imageWidth, maxHeight / imageHeight, 1);

          canvas.width = imageWidth * scale;
          canvas.height = imageHeight * scale;
          imageWidth = canvas.width;
          imageHeight = canvas.height;

          ctx.drawImage(image, 0, 0, imageWidth, imageHeight);

          btnPrev.disabled = false;
          btnNext.disabled = false;
          updateUI();
        };
        image.src = e.target.result;
      };
      reader.readAsDataURL(file);
    }

    // Event handlers
    dropZone.addEventListener('click', () => fileInput.click());
    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('dragover');
    });
    dropZone.addEventListener('dragleave', () => dropZone.classList.remove('dragover'));
    dropZone.addEventListener('drop', (e) => {
      e.preventDefault();
      dropZone.classList.remove('dragover');
      if (e.dataTransfer.files[0]) loadImage(e.dataTransfer.files[0]);
    });
    fileInput.addEventListener('change', (e) => {
      if (e.target.files[0]) loadImage(e.target.files[0]);
    });

    canvas.addEventListener('click', (e) => {
      if (!image) return;

      const landmarks = getCurrentLandmarks();
      const rect = canvas.getBoundingClientRect();
      const x = (e.clientX - rect.left) / imageWidth;
      const y = (e.clientY - rect.top) / imageHeight;

      const lm = landmarks[currentIndex];
      setPlacedPoint(lm.id, { x, y });

      // Check if we just placed the last front face landmark
      if (currentPhase === 'front' && currentIndex === landmarks.length - 1 && !frontCompletionShown) {
        frontCompletionShown = true;
        showCompletionModal();
      } else if (currentIndex < landmarks.length - 1) {
        // Auto-advance to next
        currentIndex++;
      }
      updateUI();
    });

    btnPrev.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        updateUI();
      }
    });

    btnNext.addEventListener('click', () => {
      const landmarks = getCurrentLandmarks();
      if (currentIndex < landmarks.length - 1) {
        currentIndex++;
        updateUI();
      }
    });

    btnClear.addEventListener('click', () => {
      if (confirm('Clear all placed points for current phase?')) {
        if (currentPhase === 'front') {
          frontPlacedPoints = {};
          frontCompletionShown = false;
        } else {
          sidePlacedPoints = {};
        }
        currentIndex = 0;
        updateUI();
      }
    });

    btnExport.addEventListener('click', () => {
      const data = {
        timestamp: new Date().toISOString(),
        front: {
          totalLandmarks: FRONT_LANDMARKS.length,
          placedCount: Object.keys(frontPlacedPoints).length,
          landmarks: FRONT_LANDMARKS.map(lm => ({
            id: lm.id,
            label: lm.label,
            group: lm.group,
            coordinates: frontPlacedPoints[lm.id] || null
          }))
        },
        side: {
          totalLandmarks: SIDE_LANDMARKS.length,
          placedCount: Object.keys(sidePlacedPoints).length,
          landmarks: SIDE_LANDMARKS.map(lm => ({
            id: lm.id,
            label: lm.label,
            group: lm.group,
            coordinates: sidePlacedPoints[lm.id] || null
          }))
        }
      };

      const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `landmark-mapping-${Date.now()}.json`;
      a.click();
      URL.revokeObjectURL(url);
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      const landmarks = getCurrentLandmarks();
      if (e.key === 'ArrowLeft' && currentIndex > 0) {
        currentIndex--;
        updateUI();
      } else if (e.key === 'ArrowRight' && currentIndex < landmarks.length - 1) {
        currentIndex++;
        updateUI();
      }
    });

    // Show completion modal with summary of placed points
    function showCompletionModal() {
      const modalPoints = document.getElementById('modalPoints');
      const placedCount = Object.keys(frontPlacedPoints).length;

      document.getElementById('modalTitle').textContent = 'Front Face Mapping Complete!';
      document.getElementById('modalSummary').textContent =
        `You have placed ${placedCount} of ${FRONT_LANDMARKS.length} landmarks.`;

      // Generate point summary
      modalPoints.innerHTML = FRONT_LANDMARKS.map(lm => {
        const point = frontPlacedPoints[lm.id];
        if (point) {
          return `
            <div class="modal-point">
              <span class="name">${lm.label}</span>
              <span class="coords">(${point.x.toFixed(3)}, ${point.y.toFixed(3)})</span>
            </div>
          `;
        } else {
          return `
            <div class="modal-point missing">
              <span class="name">${lm.label} (not placed)</span>
              <span class="coords">---</span>
            </div>
          `;
        }
      }).join('');

      completionModal.classList.add('show');
    }

    // Hide modal
    function hideModal() {
      completionModal.classList.remove('show');
    }

    // Modal button handlers
    btnStay.addEventListener('click', () => {
      hideModal();
    });

    btnContinue.addEventListener('click', () => {
      hideModal();
      switchToSidePhase();
    });

    // Switch to side profile phase
    function switchToSidePhase() {
      currentPhase = 'side';
      currentIndex = 0;
      updateUI();
    }

    // Initial render
    renderLandmarkList();
    updateUI();
  </script>
</body>
</html>
