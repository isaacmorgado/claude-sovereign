#!/bin/bash
# Custom command hook for clauded
# Adds /models command to show interactive picker

COMMAND="$1"
shift
ARGS="$@"

case "$COMMAND" in
  models)
    echo ""
    echo "╔═══════════════════════════════════════════════════════════════╗"
    echo "║                   Available Models                            ║"
    echo "╚═══════════════════════════════════════════════════════════════╝"
    echo ""
    echo "GLM (Free):"
    echo "  1. /model glm/glm-4           - Most capable"
    echo "  2. /model glm/glm-4-flash     - Fastest"
    echo "  3. /model glm/glm-4-air       - Balanced"
    echo ""
    echo "Featherless (Uncensored):"
    echo "  4. /model featherless/Llama-3-8B-Instruct-abliterated"
    echo "  5. /model featherless/Llama-3-70B-Instruct-abliterated"
    echo ""
    echo "Google:"
    echo "  6. /model google/gemini-pro"
    echo "  7. /model google/gemini-2.0-flash"
    echo ""
    echo "Anthropic (need ANTHROPIC_API_KEY):"
    echo "  8. /model claude-sonnet-4-5"
    echo "  9. /model claude-opus-4-5"
    echo ""
    echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
    echo "Copy and paste the /model command you want to use"
    echo ""
    exit 0
    ;;
esac

# Let other commands pass through
exit 1
