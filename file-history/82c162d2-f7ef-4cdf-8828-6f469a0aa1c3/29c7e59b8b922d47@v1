#!/bin/bash
# Reinstall original Claude Code and create clauded wrapper

set -e

echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "ğŸ”§ Step 1: Reinstalling original Claude Code"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""

sudo npm install -g @anthropic-ai/claude-code@2.0.76 --force

echo ""
echo "âœ… Original Claude Code installed"
echo ""

echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "ğŸ¨ Step 2: Creating clauded wrapper with custom ASCII art"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""

# Create the clauded wrapper script
sudo tee /usr/local/bin/clauded > /dev/null << 'WRAPPER_EOF'
#!/bin/bash
# clauded - Claude Code with custom ASCII art and multi-provider proxy

# Custom CLAUDE ASCII art with horns (matrix green)
GREEN='\033[38;5;46m'
RESET='\033[0m'

cat << 'ART_EOF'

     â–²                                        â–²
    â–â–ˆâ–Œ                                      â–â–ˆâ–Œ
   â–â–ˆâ–ˆâ–ˆâ–Œ    â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—      â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—
  â–â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–Œ  â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â•â•â•
   â–â–ˆâ–ˆâ–ˆâ–Œ   â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—
    â–â–ˆâ–Œ    â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•
     â–²     â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—
            â•šâ•â•â•â•â•â•â•šâ•â•â•â•â•â•â•â•šâ•â•  â•šâ•â• â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â•â•

ART_EOF

echo ""
echo -e "${GREEN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${RESET}"
echo -e "${GREEN}â•‘   Claude Code Multi-Provider Proxy                           â•‘${RESET}"
echo -e "${GREEN}â•‘   GLM Â· Featherless Â· Google (Anthropic via separate key)    â•‘${RESET}"
echo -e "${GREEN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${RESET}"
echo ""

# Check if proxy server exists
if [ ! -f "$HOME/.claude/model-proxy-server.js" ]; then
    echo "âš ï¸  Proxy server not found at ~/.claude/model-proxy-server.js"
    echo "Starting Claude Code without proxy..."
    echo ""
    exec claude "$@"
fi

# Start proxy server in background
echo "Starting multi-provider proxy..."
node "$HOME/.claude/model-proxy-server.js" 3000 > /tmp/claude-proxy.log 2>&1 &
PROXY_PID=$!

# Wait for proxy to start
sleep 2

# Check if proxy started successfully
if ! ps -p $PROXY_PID > /dev/null; then
    echo "âŒ Proxy server failed to start"
    echo "Check logs: tail /tmp/claude-proxy.log"
    echo ""
    echo "Starting Claude Code without proxy..."
    exec claude "$@"
fi

echo -e "${GREEN}âœ“ Proxy started on port 3000${RESET}"
echo ""
echo "Available Models:"
echo -e "${GREEN}  /model glm/glm-4                              - GLM (free)${RESET}"
echo -e "${GREEN}  /model featherless/Llama-3-8B-Instruct-abliterated${RESET}"
echo -e "${GREEN}  /model google/gemini-2.0-flash               - Google OAuth${RESET}"
echo ""
echo "Starting Claude Code..."
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""

# Start Claude Code with proxy
ANTHROPIC_BASE_URL=http://127.0.0.1:3000 claude "$@"

# Cleanup: stop proxy when Claude exits
kill $PROXY_PID 2>/dev/null
echo ""
echo "Stopping proxy..."
WRAPPER_EOF

# Make clauded executable
sudo chmod +x /usr/local/bin/clauded

echo "âœ… clauded wrapper created at /usr/local/bin/clauded"
echo ""

echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "ğŸ§ª Step 3: Testing both commands"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""

echo "Testing 'claude' (original):"
claude --version 2>&1 | head -3
echo ""

echo "Testing 'clauded' (wrapper with custom art):"
which clauded
echo ""

echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "âœ… Setup Complete!"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""
echo "Commands available:"
echo "  claude   - Original Claude Code (no customizations)"
echo "  clauded  - Custom ASCII art + multi-provider proxy"
echo ""
echo "To use clauded:"
echo "  clauded"
echo ""
echo "Then switch models with:"
echo "  /model glm/glm-4"
echo "  /model featherless/Llama-3-8B-Instruct-abliterated"
echo "  /model google/gemini-2.0-flash"
echo ""
