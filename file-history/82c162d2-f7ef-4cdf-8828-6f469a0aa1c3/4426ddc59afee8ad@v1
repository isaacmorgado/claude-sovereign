#!/bin/bash
# Apply the fixed tweakcc patch with ASCII art

set -e

echo "ğŸ”§ Applying fixed tweakcc customizations..."
echo ""

# Kill any running Claude Code processes
echo "Stopping any running Claude Code processes..."
pkill -f "claude" 2>/dev/null || true
sleep 2

# Apply the patch
echo "Applying tweakcc patch..."
cd /tmp/tweakcc && sudo bun run dist/index.mjs --apply

echo ""
echo "âœ… Patch applied successfully!"
echo ""
echo "Testing Claude Code..."
clauded --version 2>&1 | head -3

echo ""
echo "ğŸ‰ Ready to use! Start Claude Code with: clauded"
