'use client';

import React from 'react';
import { useResults } from '@/contexts/ResultsContext';
import { usePricing } from '@/contexts/PricingContext';
import { Sparkles, Lock, ShieldCheck, Zap, Info } from 'lucide-react';

const VisionInsightsCard: React.FC = () => {
    const { vision, isUnlocked } = useResults();
    const { openPricingModal } = usePricing();

    if (!vision) return null;

    const sections = [
        { title: 'Skin Analysis', data: vision.skin, icon: '‚ú®' },
        { title: 'Hair & Scalp', data: vision.hair, icon: 'üíá‚Äç‚ôÇÔ∏è' },
        { title: 'Eye Health', data: vision.eyes, icon: 'üëÅÔ∏è' },
        { title: 'Dental Harmony', data: vision.teeth, icon: 'ü¶∑' }
    ];

    return (
        <div className="relative overflow-hidden bg-[#111] border border-white/10 rounded-2xl p-6 shadow-xl">
            <div className="flex items-center justify-between mb-6">
                <div className="flex items-center gap-3">
                    <div className="p-2 rounded-lg bg-blue-500/20 text-blue-400">
                        <Sparkles size={20} />
                    </div>
                    <div>
                        <h3 className="text-lg font-bold text-white uppercase tracking-wider">AI Qualitative Insights</h3>
                        <p className="text-xs text-white/40 uppercase font-bold tracking-widest">Powered by Claude 3.5 Sonnet</p>
                    </div>
                </div>
                {isUnlocked && (
                    <div className="flex items-center gap-1.5 px-3 py-1 rounded-full bg-green-500/10 border border-green-500/20 text-green-400 text-[10px] font-black uppercase">
                        <ShieldCheck size={12} />
                        Pro Verified
                    </div>
                )}
            </div>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                {sections.map((section, idx) => (
                    <div key={idx} className="p-4 rounded-xl bg-white/[0.03] border border-white/5">
                        <div className="flex items-center gap-2 mb-3">
                            <span className="text-xl">{section.icon}</span>
                            <h4 className="text-sm font-bold text-white/70 uppercase tracking-widest">{section.title}</h4>
                        </div>

                        <div className="space-y-2">
                            {Object.entries(section.data || {}).map(([key, value]: [string, unknown]) => {
                                // Skip confidence and visibility flags
                                if (key === 'confidence' || key === 'visible_in_photo') return null;

                                return (
                                    <div key={key} className="flex justify-between items-center text-xs">
                                        <span className="text-white/40 capitalize">{key.replace(/_/g, ' ')}</span>
                                        <span className={`font-medium ${value === 'Locked' ? 'text-blue-400 font-bold' : 'text-white'}`}>
                                            {Array.isArray(value) ? value.join(', ') || 'None' : value}
                                        </span>
                                    </div>
                                );
                            })}
                        </div>
                    </div>
                ))}
            </div>

            {/* Premium Lock Overlay */}
            {!isUnlocked && (
                <div
                    className="absolute inset-0 z-10 flex flex-col items-center justify-center p-6 bg-black/40 backdrop-blur-md cursor-pointer group"
                    onClick={() => openPricingModal('vision_insights')}
                >
                    <div className="p-4 rounded-full bg-blue-500/20 border border-blue-500/30 text-blue-400 mb-4 group-hover:scale-110 transition-transform">
                        <Lock size={32} />
                    </div>
                    <h3 className="text-xl font-black text-white mb-2 text-center uppercase tracking-tighter">
                        Unlock Qualitative <br />
                        <span className="text-blue-400">Detailed Analysis</span>
                    </h3>
                    <p className="text-white/60 text-sm text-center max-w-xs mb-6">
                        Reveal detailed insights about skin clarity, hair health, and dental alignment powered by medical-grade AI.
                    </p>
                    <button className="flex items-center gap-2 px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white text-xs font-black rounded-full transition-all shadow-[0_0_20px_rgba(59,130,246,0.3)]">
                        UPGRADE TO PRO
                        <Zap size={14} className="fill-current" />
                    </button>

                    <div className="mt-8 flex items-center gap-4 text-white/30">
                        <div className="flex items-center gap-1">
                            <Info size={12} />
                            <span className="text-[10px] font-bold uppercase">Claude 3.5 Sonnet Analysis</span>
                        </div>
                    </div>
                </div>
            )}
        </div>
    );
};

export default VisionInsightsCard;
