'use client';

import React from 'react';
import { motion } from 'framer-motion';
import { Stethoscope, CheckCircle2, AlertCircle, ShieldAlert } from 'lucide-react';
import { usePricing } from '@/contexts/PricingContext';

interface MedicalPrescriptionCardProps {
    vision: any;
    isUnlocked: boolean;
}

export const MedicalPrescriptionCard: React.FC<MedicalPrescriptionCardProps> = ({ vision, isUnlocked }) => {
    const { openPricingModal } = usePricing();
    const teeth = vision?.teeth;

    if (!teeth) return null;

    const needsAttention = teeth.status === 'yellow' || teeth.alignment === 'crowded' || teeth.alignment === 'malocclusion';

    return (
        <motion.div
            className="bg-neutral-900 border border-neutral-800 rounded-2xl overflow-hidden shadow-2xl"
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
        >
            {/* Header */}
            <div className="bg-gradient-to-r from-blue-600/20 to-cyan-500/20 p-4 border-b border-white/5 flex items-center justify-between">
                <div className="flex items-center gap-2">
                    <Stethoscope size={18} className="text-blue-400" />
                    <h3 className="font-bold text-white text-sm uppercase tracking-wider">Medical Prescription</h3>
                </div>
                <div className="px-2 py-0.5 rounded bg-blue-500/20 text-blue-400 text-[10px] font-black uppercase">
                    AI Diagnostic
                </div>
            </div>

            <div className="p-6">
                <div className="flex items-start gap-4 mb-6">
                    <div className="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center text-2xl flex-shrink-0">
                        ðŸ¦·
                    </div>
                    <div>
                        <h4 className="text-white font-bold mb-1">Dental Harmony & SMILE</h4>
                        <div className="flex gap-2">
                            <span className="text-[10px] text-neutral-500 uppercase font-black">Status:</span>
                            <span className={`text-[10px] uppercase font-black ${needsAttention ? 'text-orange-400' : 'text-green-400'}`}>
                                {teeth.status || 'Excellent'}
                            </span>
                        </div>
                    </div>
                </div>

                <div className="space-y-4">
                    <div className="p-4 rounded-xl bg-black/40 border border-white/5">
                        <div className="flex items-center gap-2 mb-2">
                            {needsAttention ? (
                                <AlertCircle size={14} className="text-orange-400" />
                            ) : (
                                <CheckCircle2 size={14} className="text-green-400" />
                            )}
                            <span className="text-xs font-bold text-white uppercase tracking-tighter">AI Observation</span>
                        </div>
                        <p className="text-sm text-neutral-400">
                            {isUnlocked ? (
                                <>
                                    Dental alignment classified as <span className="text-white font-bold">{teeth.alignment}</span>.
                                    {teeth.alignment === 'crowded' ? ' Orthodontic intervention (Invisalign) recommended for lateral expander effect.' : ' Maintain current dental hygiene.'}
                                </>
                            ) : (
                                "Detailed dental topology and orthodontic requirements are locked. Upgrade to reveal clinical findings."
                            )}
                        </p>
                    </div>

                    {isUnlocked ? (
                        <div className="space-y-2">
                            <h5 className="text-[10px] font-black text-white/40 uppercase tracking-widest px-1">Prescribed Action</h5>
                            <ul className="space-y-2">
                                {teeth.status === 'yellow' && (
                                    <li className="flex items-center gap-3 p-3 rounded-lg bg-blue-500/5 border border-blue-500/10 text-sm text-white">
                                        <div className="w-1.5 h-1.5 rounded-full bg-blue-400" />
                                        Crest 3D White Professional Effects
                                    </li>
                                )}
                                {(teeth.alignment === 'crowded' || teeth.alignment === 'malocclusion') && (
                                    <li className="flex items-center gap-3 p-3 rounded-lg bg-blue-500/5 border border-blue-500/10 text-sm text-white">
                                        <div className="w-1.5 h-1.5 rounded-full bg-blue-400" />
                                        Invisalign / Clear Aligner Consult
                                    </li>
                                )}
                                {teeth.alignment === 'perfect' && teeth.status === 'white' && (
                                    <li className="flex items-center gap-3 p-3 rounded-lg bg-green-500/5 border border-green-500/10 text-sm text-white">
                                        <div className="w-1.5 h-1.5 rounded-full bg-green-400" />
                                        Optimize Biome (Oral Probiotics)
                                    </li>
                                )}
                            </ul>
                        </div>
                    ) : (
                        <button
                            onClick={() => openPricingModal('medical_prescription')}
                            className="w-full flex items-center justify-center gap-2 py-3 bg-blue-600 text-white font-black text-xs rounded-xl hover:bg-blue-500 transition-colors shadow-lg shadow-blue-600/20"
                        >
                            <ShieldAlert size={14} />
                            UNLOCK CLINICAL PRESCRIPTION
                        </button>
                    )}
                </div>
            </div>
        </motion.div>
    );
};
