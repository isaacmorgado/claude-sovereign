'use client';

import { useState } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import {
  ChevronDown,
  ChevronUp,
  ShoppingCart,
  Zap,
  ArrowRight,
  Package,
} from 'lucide-react';
import { Flaw, ProductRecommendation, Recommendation } from '@/types/results';
import { ProductCard } from './ProductCard';

interface WeakPointCardProps {
  flaw: Flaw;
  rank: number;
  products: ProductRecommendation[];
  treatments: Recommendation[];
  onViewTreatment?: (treatment: Recommendation) => void;
}

export function WeakPointCard({
  flaw,
  rank,
  products,
  treatments,
  onViewTreatment,
}: WeakPointCardProps) {
  const [isExpanded, setIsExpanded] = useState(false);

  // Severity colors
  const getSeverityColor = (impact: number) => {
    if (impact >= 5) return { bg: 'bg-red-500/20', border: 'border-red-500/30', text: 'text-red-400' };
    if (impact >= 3) return { bg: 'bg-orange-500/20', border: 'border-orange-500/30', text: 'text-orange-400' };
    return { bg: 'bg-yellow-500/20', border: 'border-yellow-500/30', text: 'text-yellow-400' };
  };

  const colors = getSeverityColor(flaw.harmonyPercentageLost);

  return (
    <motion.div
      className={`${colors.bg} border ${colors.border} rounded-xl overflow-hidden`}
      initial={{ opacity: 0, y: 10 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ delay: rank * 0.05 }}
    >
      {/* Header */}
      <button
        onClick={() => setIsExpanded(!isExpanded)}
        className="w-full p-4 flex items-center justify-between hover:bg-white/5 transition-colors"
      >
        <div className="flex items-center gap-3">
          <div className={`w-8 h-8 rounded-lg ${colors.bg} flex items-center justify-center`}>
            <span className={`text-sm font-bold ${colors.text}`}>#{rank}</span>
          </div>
          <div className="text-left">
            <h4 className="font-medium text-white">{flaw.flawName}</h4>
            <p className="text-xs text-neutral-400">{flaw.categoryName}</p>
          </div>
        </div>

        <div className="flex items-center gap-4">
          <div className="text-right">
            <span className={`text-sm font-semibold ${colors.text}`}>
              -{flaw.harmonyPercentageLost.toFixed(1)}%
            </span>
            <p className="text-xs text-neutral-500">harmony lost</p>
          </div>
          {isExpanded ? (
            <ChevronUp size={20} className="text-neutral-400" />
          ) : (
            <ChevronDown size={20} className="text-neutral-400" />
          )}
        </div>
      </button>

      {/* Expanded Content */}
      <AnimatePresence>
        {isExpanded && (
          <motion.div
            initial={{ height: 0, opacity: 0 }}
            animate={{ height: 'auto', opacity: 1 }}
            exit={{ height: 0, opacity: 0 }}
            transition={{ duration: 0.2 }}
            className="overflow-hidden"
          >
            <div className="px-4 pb-4 space-y-4">
              {/* Summary */}
              <p className="text-sm text-neutral-300">{flaw.summary}</p>

              {/* Contributing Ratios */}
              {flaw.responsibleRatios.length > 0 && (
                <div className="space-y-2">
                  <h5 className="text-xs font-medium text-neutral-400 uppercase tracking-wide">
                    Contributing Metrics
                  </h5>
                  <div className="flex flex-wrap gap-2">
                    {flaw.responsibleRatios.slice(0, 3).map((ratio) => (
                      <div
                        key={ratio.ratioId}
                        className="px-2 py-1 bg-neutral-800/50 rounded-lg text-xs"
                      >
                        <span className="text-neutral-300">{ratio.ratioName}</span>
                        <span className="text-neutral-500 ml-1">
                          ({typeof ratio.score === 'number' ? ratio.score.toFixed(1) : ratio.score}/10)
                        </span>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              {/* Products to Fix */}
              {products.length > 0 && (
                <div className="space-y-3">
                  <div className="flex items-center gap-2">
                    <Package size={14} className="text-cyan-400" />
                    <h5 className="text-xs font-medium text-neutral-400 uppercase tracking-wide">
                      Products to Help
                    </h5>
                  </div>
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-3">
                    {products.slice(0, 2).map((rec) => (
                      <ProductCard key={rec.product.id} recommendation={rec} compact />
                    ))}
                  </div>
                  {products.length > 2 && (
                    <p className="text-xs text-neutral-500 text-center">
                      +{products.length - 2} more products
                    </p>
                  )}
                </div>
              )}

              {/* Treatments */}
              {treatments.length > 0 && (
                <div className="space-y-3">
                  <div className="flex items-center gap-2">
                    <Zap size={14} className="text-purple-400" />
                    <h5 className="text-xs font-medium text-neutral-400 uppercase tracking-wide">
                      Recommended Treatments
                    </h5>
                  </div>
                  <div className="space-y-2">
                    {treatments.slice(0, 3).map((treatment) => (
                      <button
                        key={treatment.ref_id}
                        onClick={() => onViewTreatment?.(treatment)}
                        className="w-full flex items-center justify-between p-3 bg-neutral-800/50 rounded-lg hover:bg-neutral-800 transition-colors group"
                      >
                        <div className="flex items-center gap-3">
                          <div className={`px-2 py-0.5 rounded text-xs font-medium ${
                            treatment.phase === 'Foundational'
                              ? 'bg-green-500/20 text-green-400'
                              : treatment.phase === 'Minimally Invasive'
                                ? 'bg-yellow-500/20 text-yellow-400'
                                : 'bg-red-500/20 text-red-400'
                          }`}>
                            {treatment.phase}
                          </div>
                          <span className="text-sm text-white">{treatment.name}</span>
                        </div>
                        <div className="flex items-center gap-2">
                          <span className="text-xs text-green-400">
                            +{(treatment.impact * 100).toFixed(0)}% improvement
                          </span>
                          <ArrowRight size={14} className="text-neutral-500 group-hover:text-cyan-400 transition-colors" />
                        </div>
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* CTA */}
              <div className="pt-2 border-t border-neutral-800">
                <a
                  href="#plan"
                  className="flex items-center justify-center gap-2 w-full py-2.5 bg-gradient-to-r from-cyan-500 to-blue-600 text-black text-sm font-medium rounded-lg hover:opacity-90 transition-opacity"
                >
                  <ShoppingCart size={16} />
                  View Full Fix Plan
                </a>
              </div>
            </div>
          </motion.div>
        )}
      </AnimatePresence>
    </motion.div>
  );
}
