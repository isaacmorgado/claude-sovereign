from setuptools import setup

APP = ['librechat_menubar.py']
DATA_FILES = []
OPTIONS = {
    'argv_emulation': False,
    'plist': {
        'LSUIElement': True,  # This makes it a menu bar only app
        'CFBundleName': 'LibreChat',
        'CFBundleDisplayName': 'LibreChat',
        'CFBundleIdentifier': 'com.librechat.menubar',
        'CFBundleVersion': '1.0.0',
        'CFBundleShortVersionString': '1.0.0',
    },
    'packages': ['rumps'],
}

setup(
    app=APP,
    name='LibreChat',
    data_files=DATA_FILES,
    options={'py2app': OPTIONS},
    setup_requires=['py2app'],
)
