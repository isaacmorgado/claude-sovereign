// UXP API type declarations for Adobe Premiere Pro plugin

declare module 'uxp' {
  export const storage: {
    localFileSystem: LocalFileSystem
  }

  export const os: {
    platform: string
  }

  interface LocalFileSystem {
    getDataFolder(): Promise<Folder>
  }

  interface Folder {
    createFile(name: string, options?: { overwrite?: boolean }): Promise<File>
    getEntry(name: string): Promise<Entry | null>
  }

  interface Entry {
    delete(): Promise<void>
    read(): Promise<string>
  }

  interface File extends Entry {
    write(content: string): Promise<void>
  }
}
