#!/usr/bin/env python3
"""
Simple Face Generator - Opens browser for manual generation
Copies prompts to clipboard one by one for easy pasting
"""

import json
import pyperclip
import webbrowser
from pathlib import Path

PROMPTS_FILE = Path("/Users/imorgado/Desktop/face_generation/prompts.json")
SOMAKE_URL = "https://www.somake.ai/tools/face-generator"

def main():
    # Load prompts
    with open(PROMPTS_FILE, 'r') as f:
        data = json.load(f)

    prompts = data['prompts']
    print(f"Loaded {len(prompts)} prompts")
    print("\nThis script will copy each prompt to your clipboard.")
    print("Steps for each face:")
    print("1. Paste the prompt (Cmd+V)")
    print("2. Click Generate")
    print("3. Download the image")
    print("4. Press Enter here for next prompt\n")

    # Open the website
    webbrowser.open(SOMAKE_URL)
    input("Press Enter when the page is loaded...")

    for i, prompt_data in enumerate(prompts):
        print(f"\n[{i+1}/{len(prompts)}] {prompt_data['ethnicity']} {prompt_data['gender']} {prompt_data['view']}")
        print(f"Filename: {prompt_data['filename']}")

        # Copy prompt to clipboard
        pyperclip.copy(prompt_data['prompt'])
        print("âœ“ Prompt copied to clipboard!")
        print(f"Preview: {prompt_data['prompt'][:60]}...")

        input("\nPress Enter after downloading this image...")

    print("\n" + "="*60)
    print("ALL DONE!")
    print("="*60)
    print(f"Don't forget to save images to: /Users/imorgado/Desktop/face_generation/generated_faces/")


if __name__ == "__main__":
    main()
