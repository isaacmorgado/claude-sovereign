'use client';

import { useState } from 'react';
import { useRouter } from 'next/navigation';
import { motion } from 'framer-motion';
import { ArrowLeft, ArrowRight } from 'lucide-react';
import { useUpload } from '@/contexts/UploadContext';
import { SideProfileManualTool, LandmarkPoint } from '@/components/SideProfileManualTool';

type AnalysisStep = 'side-profile' | 'front-profile' | 'results';

export default function AnalysisPage() {
  const router = useRouter();
  const { frontPhoto, sidePhoto } = useUpload();
  const [currentStep, setCurrentStep] = useState<AnalysisStep>('side-profile');
  const [sideLandmarks, setSideLandmarks] = useState<LandmarkPoint[]>([]);

  // Redirect if no photos uploaded
  if (!sidePhoto) {
    return (
      <main className="min-h-screen bg-black flex flex-col items-center justify-center px-4">
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="text-center"
        >
          <h1 className="text-2xl font-bold text-white mb-4">No Photos Found</h1>
          <p className="text-foreground-dim mb-8">
            Please upload your photos first to begin the analysis.
          </p>
          <button
            onClick={() => router.push('/upload')}
            className="px-6 py-3 rounded-lg bg-accent text-black font-semibold hover:bg-accent-hover transition-colors"
          >
            Go to Upload
          </button>
        </motion.div>
      </main>
    );
  }

  const handleSideLandmarksComplete = (landmarks: LandmarkPoint[]) => {
    setSideLandmarks(landmarks);
    // For now, just log the landmarks
    console.log('Side profile landmarks:', landmarks);
    // TODO: Move to next step or show results
  };

  const handleBack = () => {
    if (currentStep === 'side-profile') {
      router.push('/upload');
    }
  };

  return (
    <main className="min-h-screen bg-black flex flex-col items-center px-4 py-12">
      {/* Header */}
      <motion.div
        initial={{ opacity: 0, y: -20 }}
        animate={{ opacity: 1, y: 0 }}
        className="w-full max-w-3xl mb-8"
      >
        <div className="flex items-center justify-between">
          <button
            onClick={handleBack}
            className="flex items-center gap-2 text-foreground-dim hover:text-white transition-colors"
          >
            <ArrowLeft className="w-5 h-5" />
            Back
          </button>

          <div className="flex items-center gap-2">
            <div className="px-3 py-1 rounded-full bg-accent/20 border border-accent/50">
              <span className="text-accent text-sm font-medium">
                Step 1: Side Profile
              </span>
            </div>
          </div>
        </div>
      </motion.div>

      {/* Main Content */}
      {currentStep === 'side-profile' && sidePhoto && (
        <SideProfileManualTool
          imageUrl={sidePhoto.preview}
          onLandmarksChange={setSideLandmarks}
          onComplete={handleSideLandmarksComplete}
        />
      )}
    </main>
  );
}
