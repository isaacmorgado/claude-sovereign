import { Anthropic } from "@anthropic-ai/sdk"

import type { ModelInfo } from "@multi-agent/types"

import type { ApiHandlerOptions } from "../../shared/api"

import { ApiStream, ApiStreamUsageChunk } from "../transform/stream"

import { OpenAiHandler } from "./openai"
import type { ApiHandlerCreateMessageMetadata } from "../index"

// RunPod serverless endpoints are OpenAI-compatible
// Default endpoint URL pattern: https://api.runpod.ai/v2/{endpoint_id}/openai/v1
const RUNPOD_DEFAULT_BASE_URL = "https://api.runpod.ai/v2"

// Default model info for RunPod endpoints (user specifies their own model)
const runpodDefaultModelInfo: ModelInfo = {
	maxTokens: 8192,
	contextWindow: 128000,
	supportsImages: true,
	supportsPromptCache: false,
	inputPrice: 0, // Varies by endpoint
	outputPrice: 0, // Varies by endpoint
	description: "RunPod Serverless GPU endpoint",
}

export class RunPodHandler extends OpenAiHandler {
	constructor(options: ApiHandlerOptions) {
		const endpointId = options.runpodEndpointId ?? ""
		const baseUrl = options.runpodBaseUrl ?? `${RUNPOD_DEFAULT_BASE_URL}/${endpointId}/openai/v1`

		super({
			...options,
			openAiApiKey: options.runpodApiKey ?? "not-provided",
			openAiModelId: options.apiModelId ?? "default",
			openAiBaseUrl: baseUrl,
			openAiStreamingEnabled: true,
			includeMaxTokens: true,
		})
	}

	override getModel() {
		const id = this.options.apiModelId ?? "default"
		// RunPod uses custom models deployed by user, so we use default info
		const info = runpodDefaultModelInfo
		return { id, info }
	}

	override async *createMessage(
		systemPrompt: string,
		messages: Anthropic.Messages.MessageParam[],
		metadata?: ApiHandlerCreateMessageMetadata,
	): ApiStream {
		// Use parent's implementation with OpenAI-compatible format
		yield* super.createMessage(systemPrompt, messages, metadata)
	}

	// Override to handle RunPod's usage metrics
	protected override processUsageMetrics(usage: any, _modelInfo?: any): ApiStreamUsageChunk {
		return {
			type: "usage",
			inputTokens: usage?.prompt_tokens || 0,
			outputTokens: usage?.completion_tokens || 0,
		}
	}
}
