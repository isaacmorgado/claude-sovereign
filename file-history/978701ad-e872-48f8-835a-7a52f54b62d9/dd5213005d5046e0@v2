      description:
        "Upload front and side profile photos. Our system automatically standardizes images to the Frankfort plane for accurate measurements.",
    },
    {
      icon: Target,
      step: "Step 2",
      title: "Map Facial Landmarks",
      description:
        "Place precise anatomical points using our guided interface with visual references for accuracy.",
    },
    {
      icon: FileText,
      step: "Step 3",
      title: "Get Your Analysis",
      description:
        "Receive your harmony score, 60+ facial ratios, and detailed insights about your strengths and areas for improvement.",
    },
  ];

  return (
    <section id="how-it-works" className="py-20 md:py-28 px-6 scroll-mt-16 bg-[#0d1117]">
      <div className="max-w-6xl mx-auto">
        <motion.div
          variants={fadeIn}
          initial="hidden"
          whileInView="visible"
          viewport={{ once: true }}
          className="text-center max-w-2xl mx-auto mb-16"
        >
          <h2 className="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-4 text-white">
            How It Works
          </h2>
          <p className="text-base md:text-lg text-gray-400 leading-relaxed">
            Three simple steps to get your complete facial analysis
          </p>
        </motion.div>

        <div className="grid md:grid-cols-3 gap-5 md:gap-6">
          {steps.map((item, index) => (
            <motion.div
              key={item.title}
              variants={fadeIn}
              initial="hidden"
              whileInView="visible"
              viewport={{ once: true }}
              transition={{ delay: index * 0.1 }}
            >
              <div className="bg-gradient-to-br from-gray-950/80 to-black border border-gray-800 rounded-xl p-7 h-full transition-all duration-300 hover:border-gray-700 hover:shadow-lg hover:shadow-white/5">
                <div className="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-blue-500/10 border border-blue-500/20 mb-5">
                  <item.icon className="h-5 w-5 text-blue-400" />
                </div>
                <div className="text-[10px] font-bold text-blue-400 uppercase tracking-[0.12em] mb-2.5">
                  {item.step}
                </div>
                <h3 className="text-lg font-semibold mb-2.5 text-white">{item.title}</h3>
                <p className="text-sm text-gray-400 leading-relaxed">{item.description}</p>
