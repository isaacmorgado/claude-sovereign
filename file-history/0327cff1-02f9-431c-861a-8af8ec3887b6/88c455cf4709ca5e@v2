export type SubscriptionTier = 'free' | 'creator' | 'pro'

export interface User {
  id: string
  email: string
  name: string | null
  subscription_tier: SubscriptionTier
  usage_minutes_used: number
  usage_reset_at: string
  created_at: string
}

export interface AuthTokens {
  accessToken: string
  refreshToken: string
}

export interface UsageStats {
  currentUsage: number
  limit: number
  remaining: number
  percentUsed: number
  tier: SubscriptionTier
  resetAt: string
}

export interface SubscriptionStatus {
  tier: SubscriptionTier
  status: 'active' | 'canceled' | 'past_due' | 'none'
  currentPeriodEnd: string | null
  cancelAtPeriodEnd: boolean
}

export const TIER_LIMITS: Record<SubscriptionTier, number> = {
  free: 10,
  creator: 300,
  pro: 500,
}

export const TIER_PRICES: Record<Exclude<SubscriptionTier, 'free'>, { monthly: number; yearly: number }> = {
  creator: { monthly: 29.99, yearly: 298.70 },
  pro: { monthly: 69.99, yearly: 697.10 },
}
