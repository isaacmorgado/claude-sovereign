// Cutting Panel - Silence-based auto-cutting from transcription results
import { LitElement, html, css } from 'lit'
import { customElement, property, state } from 'lit/decorators.js'
import { logger } from '@/utils/logger'
import {
  detectCutPoints,
  getSilenceStats,
  type CutPoint,
  type SilenceDetectionConfig,
  type TranscriptionSegment,
} from '@/utils/cutting/silence-detector'
import {
  applySilenceCutsToSelection,
  applyTakeGroupColors,
  getSelectedClips,
  extractAudioFromClips,
  getSelectedClipsDuration,
  type ApplyCutsResult,
  type TakeGroupInput,
  type AudioExtractionProgress,
} from '@/utils/api/premiere'
import { backendClient, type TakeGroup, type TakeDetectionResult } from '@/utils/api/backend-client'

type CuttingState = 'idle' | 'analyzing' | 'ready' | 'preview' | 'applying' | 'complete' | 'error'
type AudioSource = 'original' | 'isolated'
type ExtractionState = 'idle' | 'extracting' | 'uploading' | 'transcribing' | 'complete' | 'error'

// Color labels for take count display
const TAKE_COUNT_COLOR_NAMES: Record<number, { name: string; hex: string }> = {
  1: { name: 'Green', hex: '#4CAF50' },
  2: { name: 'Yellow', hex: '#FFC107' },
  3: { name: 'Orange', hex: '#FF9800' },
  4: { name: 'Magenta', hex: '#E91E63' },
}

@customElement('cutting-panel')
export class CuttingPanel extends LitElement {
  static styles = css`
    :host {
      display: block;
    }

    .section {
      margin-bottom: var(--space-lg);
    }

    .section-title {
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-medium);
